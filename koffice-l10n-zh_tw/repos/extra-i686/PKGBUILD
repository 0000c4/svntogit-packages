# Maintainer: Alexander Baldeck <alexander@archlinux.org>

pkgname=koffice-l10n-zh_tw
pkgver=2.0.0
pkgrel=1
pkgdesc="Chinese Traditional KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/koffice-l10n-zh_TW-$pkgver.tar.bz2)
md5sums=('fbf23c6154c05ac1fc69285654574cfd')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../koffice-l10n-zh_TW-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
