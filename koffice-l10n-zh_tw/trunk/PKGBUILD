# $Id$
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-zh_tw
pkgver=2.0.2
pkgrel=1
pkgdesc="Chinese Traditional KOffice translation."
license=('GPL')
arch=('any')
url="http://www.koffice.org"
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/koffice-l10n-zh_TW-$pkgver.tar.bz2)
md5sums=('3955d64e41a9e9a998f439270adad1e4')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../koffice-l10n-zh_TW-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
