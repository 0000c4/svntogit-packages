pkgname=network-manager-applet
pkgver=0.7.0
pkgrel=1
pkgdesc="GNOME frontends to NetWorkmanager"
arch=(i686 x86_64)
license=('GPL')
url="http://www.gnome.org/projects/NetworkManager/"
makedepends=('pkgconfig' 'perlxml')
depends=('networkmanager>=0.7.0' 'libglade>=2.6.3' 'gnome-keyring>=2.24.0' 'policykit-gnome' 'notification-daemon' 'libnotify')
replaces=('gnome-network-manager')
conflicts=('gnome-network-manager')
provides=('gnome-network-manager')
install=network-manager-applet.install
source=(http://ftp.gnome.org/pub/GNOME/sources/network-manager-applet/0.7/network-manager-applet-${pkgver}.tar.bz2)
md5sums=('856fc7c4cf43c8614445d9fcf78177d1')

build() {
  cd "${srcdir}/nm-applet-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
