# $Id$
# Maintainer: Jeff Mickey <jeff@archlinux.org>

pkgname=aria2
pkgver=0.14.0
pkgrel=1
pkgdesc="aria2 is a download utility with resuming and segmented downloading. Supports HTTP/HTTPS/FTP/BitTorrent/Metalink."
arch=(i686 x86_64)
url="http://aria2.sourceforge.net/"
license=('GPL')
depends=('gnutls>=2.4.1' 'gcc-libs>=4.3.1' 'libxml2>=2.6.32')
makedepends=('c-ares')
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/${pkgname}c-$pkgver.tar.bz2)
md5sums=('67870ae5f3bddb0d4fc064d3f5c43a6c')
sha1sums=('787c48c3304847370bf19af6976b4837042fbfd8')

build() {
  cd $startdir/src/${pkgname}c-$pkgver
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=$startdir/pkg install || return 1
}
