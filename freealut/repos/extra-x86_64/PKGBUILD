pkgname=freealut
pkgver=1.1.0
pkgrel=2
pkgdesc="OpenAL Utility Toolkit (ALUT)"
arch=(i686 x86_64)
url="http://www.openal.org"
license=("LGPL")
depends=('openal')
source=(http://connect.creativelabs.com/openal/Downloads/ALUT/$pkgname-$pkgver.tar.gz)
md5sums=('e089b28a0267faabdb6c079ee173664a')

build() {
  cd $startdir/src/$pkgname-$pkgver-src
  sh autogen.sh
  ./configure --prefix=/usr 
  make || return 1
  make DESTDIR=$startdir/pkg/ install

  # change cr-lf to -lf in script
  sed -i "s###g" $startdir/pkg/usr/bin/freealut-config
  find $startdir/pkg -name '*.la' -exec rm {} \;
}

