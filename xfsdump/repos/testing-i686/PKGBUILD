# $Id$
# Maintainer: judd <jvinet@zeroflux.org>
pkgname=xfsdump
pkgver=3.0.3
pkgrel=1
pkgdesc="Additional XFS filesystem utilities"
arch=(i686 x86_64)
license=('LGPL')
url="http://oss.sgi.com/projects/xfs/"
depends=('xfsprogs>=3.0.5' 'attr>=2.4.43' 'acl>=2.2.47' 'dmapi>=2.2.10')
options=('!makeflags')
source=(ftp://oss.sgi.com/projects/xfs/cmd_tars/xfsdump-${pkgver}.tar.gz)
options=(!emptydirs)

build() {
  cd $startdir/src/xfsdump-$pkgver
  autoconf
  ./configure --prefix=/usr
  make || return 1
  make prefix=$startdir/pkg/usr install
  # fixes
  rm -f $startdir/pkg/usr/lib/*.la
  rm -f $startdir/pkg/usr/bin/{xfsdump,xfsrestore}
}
md5sums=('a66c672a3c8d1335f57a58ee011ceeb8')
