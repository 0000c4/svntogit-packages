# Contributor: Sarah Hay <sarah@archlinux.org>

pkgname=openoffice-de
pkgver=2.4.1
pkgrel=1
pkgdesc="OpenOffice german language files"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.openoffice.org"
makedepends=('rpmextract')
depends=('openoffice-base')
source=(ftp://ftp-1.gwdg.de/pub/openoffice/extended/2.4.1rc2/OOo_2.4.1rc2_20080529_LinuxIntel_langpack_de.tar.gz)
md5sums=('01251cf9b957992a1623bfc50011f0e1')

build() {
  cd ${startdir}/src/OOH680_m17_native_packed-1_de.9310/RPMS
  for i in *.rpm
    do rpmextract.sh $i
  done
  # install openoffice language files
  cd ${startdir}/src/OOH680_m17_native_packed-1_de.9310/RPMS/opt
  mkdir -p ${startdir}/pkg/opt
  mv openoffice.org2.4 ${startdir}/pkg/opt/openoffice
  chown root -R ${startdir}/pkg/opt/openoffice
  chgrp root -R ${startdir}/pkg/opt/openoffice
}
