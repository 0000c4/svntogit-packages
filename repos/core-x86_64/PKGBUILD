pkgname=hwdetect
pkgver=0.9.1
pkgrel=2
pkgdesc="Hardware detection script with loading modules and mkinitcpio.conf / rc.conf support"
arch=(i686 x86_64)
license=('custom:none')
groups=('base')
backup=()
depends=('sh' 'awk' 'grep' 'coreutils' 'sed')
source=(hwdetect)

build() {
  install -D -m 755 $startdir/src/hwdetect $startdir/pkg/sbin/hwdetect
}
