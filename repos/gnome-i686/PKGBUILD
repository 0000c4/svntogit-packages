# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gtksourceview2
pkgver=2.3.2
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
arch=(i686 x86_64)
license=('GPL')
depends=('gtk2>=2.13.7' 'libxml2>=2.6.32')
makedepends=('perlxml' 'pkgconfig')
options=('!libtool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/gtksourceview/2.3/gtksourceview-${pkgver}.tar.bz2)
md5sums=('93bb6f41c1ad8d73ff40e94328770870')

build() {
  cd ${startdir}/src/gtksourceview-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
