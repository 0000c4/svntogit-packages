  pkgdesc="Libraries for the Calligra office suite"
  depends=('kdepimlibs' 'lcms2' 'calligra-servicetypes')
  conflicts=('koffice-libs')
  replaces=('koffice-libs')

  cd "${srcdir}"/build/libs
  make DESTDIR="${pkgdir}" install
}

