# $Id: PKGBUILD 180998 2013-03-29 13:52:39Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-getting-started-docs
pkgver=3.8.0.1
pkgrel=2
pkgdesc="Help a new user get started in GNOME"
arch=(any)
license=('CCPL:cc-by-sa-3.0')
depends=('yelp')
makedepends=('yelp-tools')
url="http://www.gnome.org"
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/3.8/$pkgname-$pkgver.tar.xz
        de.patch)
sha256sums=('299d0f3b6e4a995301cf87ddd8f2ce9e5cae756f82944b1ab50840d8ac6b6897'
            '38f8f275504ae87d9b35e02f22889e75bca8b597aab6f10308a2227a2260e132')

build() {
  cd $pkgname-$pkgver
  patch -Np1 -i ../de.patch
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
