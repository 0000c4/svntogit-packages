# Contributor: Eric Belanger <eric@archlinux.org>

pkgname=kdiff3
pkgver=0.9.93
pkgrel=1
pkgdesc="A KDE file comparator/merge tool"
arch=('i686' 'x86_64')
url="http://kdiff3.sourceforge.net/"
license=('GPL')
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
source=(http://downloads.sourceforge.net/sourceforge/kdiff3/${pkgname}-${pkgver}.tar.gz)
md5sums=('3f225daebc7f94e237d66edabf2e39ab')
sha1sums=('b0bdfa4c91cfcc97dbea6f462d22f970cd711373')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  mkdir release
  cd release
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
