pkgname=foomatic-db
pkgver=3.0_20081117
_snapver=3.0-20081117
pkgrel=1
pkgdesc="Foomatic is a system for using free software printer drivers with common spoolers on Unix"
arch=(i686 x86_64)
license=('GPL' 'custom')
depends=('perl' 'libxml2')
source=(http://www.linuxprinting.org/download/foomatic/$pkgname-$_snapver.tar.gz)
url="http://www.linuxprinting.org/foomatic.html"
md5sums=('78f86a1f709b60a77cd2b1da07217aea')

build() {
   cd ${srcdir}/${pkgname}-*
   ./configure --prefix=/usr
   make || return 1
   make DESTDIR=${pkgdir} install
   install -Dm644 ${srcdir}/${pkgname}-*/COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
