# Contributor: Sarah Hay <sarah@archlinux.org>

pkgname=xvidcore
pkgver=1.3.1
pkgrel=1
pkgdesc="XviD is an open source MPEG-4 video codec"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.xvid.org/"
depends=('glibc')
makedepends=('nasm')
source=(http://downloads.xvid.org/downloads/${pkgname}-${pkgver}.tar.bz2)
md5sums=('5b1c7032809bef6fa11eb3f4fbcf78e4')
sha1sums=('15acd3bbd4ddd39ffec7bc14f7cc2c9fe08e01c3')

build() {
  cd "${srcdir}/${pkgname}/build/generic"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}/build/generic"
  make DESTDIR="${pkgdir}" install

  #Fix dynamic libraries
  cd "${pkgdir}/usr/lib"
  _mylib=$(basename libxvidcore.so.*)
  ln -sf ${_mylib} libxvidcore.so.4
  ln -sf ${_mylib} libxvidcore.so
}
