pkgname=kmag
pkgver=18.12.3
pkgrel=1
arch=(x86_64)
pkgdesc='Screen Magnifier'
url='https://kde.org/applications/utilities/kmag/'
license=(GPL FDL)
groups=(kde-applications kdeaccessibility)
depends=(kio libqaccessibilityclient hicolor-icon-theme)
makedepends=(extra-cmake-modules kdoctools)
conflicts=(kdeaccessibility-kmag)
replaces=(kdeaccessibility-kmag)
source=("https://download.kde.org/stable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"{,.sig})
sha256sums=('04f1357e46bb3e32c85f08c9d5655cde6351c6efd27824a17019ea8562e8d5ba'
            'SKIP')
validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87) # Christoph Feck <cfeck@kde.org>

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
