# Contributor: Francois Charette <francois.archlinux.org> 

pkgname=redland
pkgver=1.0.11.99
pkgrel=1
pkgdesc="Library that provides a high-level interface to RDF data"
url="http://librdf.org/"
license=("GPL")
arch=('i686' 'x86_64')
depends=('raptor>=1.4.20' 'db>=4.8' 'postgresql-libs>=8.4.2' 'libmysqlclient>=5.1.42' 'sqlite3>=3.6.21' 
         'curl>=7.19.7' 'libxslt>=1.1.26' 'mpfr>=2.4.1' 'libtool' 'rasqal>=0.9.19' 'unixodbc')
makedepends=('gtk-doc')
options=('!libtool')
source=(#"http://download.librdf.org/source/$pkgname-$pkgver.tar.gz"
	http://download.librdf.org/snapshots/source/redland-1.0.12-GIT-fa2f4f1086379516ed3f37303c4df89505706e88.tar.gz)
md5sums=('d3846fc337884f958a00a4e8a8172dfd')

build() {
#        cd ${srcdir}/${pkgname}-${pkgver}
        cd ${srcdir}/${pkgname}*
         ./configure --prefix=/usr --enable-release --disable-static \
                     --with-raptor=system --with-rasqal=system --with-sqlite=3
        make || return 1
}

package() {
#        cd ${srcdir}/${pkgname}-${pkgver}
        cd ${srcdir}/${pkgname}*
        make -j1 DESTDIR=$pkgdir install || return 1
}
