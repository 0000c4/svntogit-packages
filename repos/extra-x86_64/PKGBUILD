# $Id: $
# Maintainer: Jan de Groot

pkgname=sound-theme-freedesktop
pkgver=0.2
pkgrel=1
pkgdesc="Freedesktop sound theme"
arch=(i686 x86_64)
license=('custom')
source=(http://0pointer.de/public/${pkgname}.tar.gz)
url="http://freedesktop.org/wiki/Specifications/sound-theme-spec"
md5sums=('35f978665f0854f29a17a0974e780b1b')

build() {
  cd "${srcdir}/freedesktop"
  install -m755 -d "${pkgdir}/usr/share/sounds/freedesktop/stereo"
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"

  install -m644 index.theme "${pkgdir}/usr/share/sounds/freedesktop/" || return 1
  install -m644 stereo/*.ogg "${pkgdir}/usr/share/sounds/freedesktop/stereo/" || return 1
  install -m644 README "${pkgdir}/usr/share/licenses/${pkgname}/" || return 1
}
