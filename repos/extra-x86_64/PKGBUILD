# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=mtools
pkgver=4.0.10
pkgrel=1
pkgdesc="A collection of utilities to access MS-DOS disks"
url="http://mtools.linux.lu/"
source=(http://ftp.gnu.org/gnu/mtools/$pkgname-$pkgver.tar.bz2)
arch=('i686' 'x86_64')
license=('GPL')
depends=('bash' 'libsm' 'libx11')
makedepends=('texinfo')
md5sums=('750c2beba968a5d46dbaae24551a82b9')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr \
              --infodir=/usr/share/mtools \
	      --sysconfdir=/etc
  make || return 1
  make prefix=$pkgdir/usr infodir=$pkgdir/usr/share/mtools install
}

