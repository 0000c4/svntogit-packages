# $Id$
# Maintainer: Ionut Biru <ibiru@archlinux.org>

pkgname=gnome-user-docs
pkgver=3.0.4
pkgrel=1
pkgdesc="User documentation for GNOME3"
arch=(any)
license=('FDL')
depends=('yelp')
makedepends=('gnome-doc-utils')
replaces=('gnome2-user-docs')
conflicts=('gnome2-user-docs')
url="http://www.gnome.org"
groups=('gnome')
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-user-docs/3.0/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('6f762aee8783f6bd06296854784d1bb856191e4fec97d6433e65b8e740996635')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeeper
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
