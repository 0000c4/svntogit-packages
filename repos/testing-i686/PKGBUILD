# $Id$
# Maintainer: Eric Belanger <eric@archlinux.org>

pkgname=psmisc
pkgver=22.7
pkgrel=1
pkgdesc="Miscellaneous procfs tools"
arch=('i686' 'x86_64')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
groups=('base')
depends=('glibc' 'ncurses')
source=(http://downloads.sourceforge.net/psmisc/${pkgname}-${pkgver}.tar.gz psmisc.checkregs.fix.patch)
md5sums=('ee9ec3b60fe45057ec4cec19c94a2d15' '143116f9c1a6ed14645cf34f76e97239')
sha1sums=('8226ecc284c8cd1e151523df56a1ba9f9c0fa3f5' 'cda61d954cc16d5331a4e3e78a30ef61fa798ef3')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -p0 < ../psmisc.checkregs.fix.patch || return 1
  autoreconf || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
