# $Id$
# Maintainer: Ionut Biru <ibiru@archlinux.org>
pkgname=gjs
pkgver=0.7.11
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('i686' 'x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
depends=('gobject-introspection' 'xulrunner')
options=('!libtool')
source=(http://download.gnome.org/sources/${pkgname}/0.7/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('4d06889ab5d57e6e9b9d44e9bc467849da55b3913656528ad4e6e2dcd7e5cae7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  sed -i 's|python|python2|' scripts/make-tests
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
