# $Id$
# Maintainer: Ionut Biru <ibiru@archlinux.org>

pkgname=gnome-user-docs
pkgver=3.1.1
pkgrel=1
pkgdesc="User documentation for GNOME"
arch=(any)
license=('FDL')
depends=('yelp')
makedepends=('gnome-doc-utils' 'itstool')
replaces=('gnome2-user-docs')
conflicts=('gnome2-user-docs')
url="http://www.gnome.org"
groups=('gnome')
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-user-docs/3.1/${pkgname}-${pkgver}.tar.xz)
sha256sums=('078a66d8ede27eb8fa58ee55ef1d3955534d2916e2e0d60c631e4ffc31e55570')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeeper
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
