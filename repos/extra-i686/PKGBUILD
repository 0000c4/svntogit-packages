# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: William Rea <sillywilly@gmail.com>

pkgname=orca
pkgver=2.32.0
pkgrel=3
pkgdesc="A scriptable screen reader and magnifier"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.gnome.org/projects/orca"
install=orca.install
options=('!libtool')
depends=('pygtk>=2.22.0' 'gnome-python>=2.28.1' 'dbus-python>=0.83.0' 'at-spi>=1.32.0' 'python-wnck' 'gnome-speech>=0.4.25' 'gnome-mag>=0.16.0' 'brltty' 'hicolor-icon-theme' 'pyxdg')
makedepends=('pkgconfig' 'intltool')
replaces=('gnopernicus')
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.32/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('32e9d70dcaeb3e87c30d0331dea4e593c1c33ffb186f567b5607310752c047b4')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
  make DESTDIR="${pkgdir}" install
}
