# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=evolution-data-server
pkgver=2.32.1
pkgrel=1
pkgdesc="Central location for addressbook and calendar storage in the GNOME Desktop"
arch=('i686' 'x86_64')
depends=('libsoup>=2.32.0' 'nss>=3.12.8' 'libgnome-keyring>=2.32.0' 'heimdal>=1.3.2' 'libgweather>=2.30.3' 'libical>=0.44' 'db>=5.1' 'libgdata>=0.6.5')
makedepends=('intltool' 'gtk-doc' 'gperf')
options=('!libtool')
url="http://www.gnome.org"
license=('GPL')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.32/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('de6a724504a9d72ca550a5a157df1e27dbb951a673f281106171c2345912fc79')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --with-openldap=yes \
      --libexecdir=/usr/lib/evolution-data-server-1.2 \
      --with-krb5=/usr --enable-gnome-keyring \
      --with-libdb=/usr
  make
  make DESTDIR="${pkgdir}" install
}
