# $Id$
# Maintainer: Ionut Biru <ionut@archlinux.ro>

pkgname=networkmanager-vpnc
pkgver=0.7.2
pkgrel=1
pkgdesc="NetworkManager VPN plugin for vpnc"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.gnome.org/projects/NetworkManager/"
makedepends=('intltool')
depends=('network-manager-applet>=0.7.2' 'vpnc')
options=('!libtool')
install=networkmanager-vpnc.install
source=(http://ftp.gnome.org/pub/GNOME/sources/NetworkManager-vpnc/0.7/NetworkManager-vpnc-${pkgver}.tar.bz2)
sha256sums=('7c6a1f8cbb9364ced8172bcbc6b006ff00f677fbcab857cc70c9a53764a21487')

build() {
  cd "${srcdir}/NetworkManager-vpnc-${pkgver}"
  ./configure --prefix=/usr \
  	--sysconfdir=/etc \
	--libexec=/usr/lib/networkmanager \
	--disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
