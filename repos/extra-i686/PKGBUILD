# $Id$
# Maintainer: Douglas Soares de Andrade <douglas@archlinux.org>

pkgname=meld
pkgver=1.3.0
pkgrel=1
pkgdesc="Visual diff and merge tool for GNOME"
arch=(i686 x86_64)
license=('GPL')
url="http://meld.sourceforge.net/"
depends=('gnome-python-desktop' 'gtksourceview')
makedepends=('perlxml' 'pkgconfig' 'gnome-doc-utils' 'intltool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.3/${pkgname}-${pkgver}.tar.gz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make prefix=/usr || return 1
  make prefix=/usr DESTDIR=${pkgdir} install || return 1
  rm -rf ${pkgdir}/usr/gnome/share/doc
}
md5sums=('5cfc42077ba0bb9f03d6e568dbd906d7')
