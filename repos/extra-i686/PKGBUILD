# Contributor: Charles-Henri d'Adhemar <cdadhemar@gmail.com>

pkgname=gegl
pkgver=0.0.20
pkgrel=1
pkgdesc="Graph based image processing framework"
arch=('i686' 'x86_64')
url="http://www.gegl.org/"
license=('GPL3' 'LGPL3')
depends=('babl>=0.0.22' 'libpng' 'gtk2')
makedepends=('ruby')
options=('!libtool')
source=(ftp://ftp.gimp.org/pub/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2)
md5sums=('2e1f97ec8abd9a4a21f458b43799bff2')
sha1sums=('37be399b58d50a87134f2dfad389a476e1155874')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  sed -i 's|#include <ffmpeg/avformat.h>|#include <libavformat/avformat.h>|' operations/external/ff-load.c || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
