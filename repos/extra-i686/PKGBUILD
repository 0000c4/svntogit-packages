# Contributor: Eric Belanger <eric@archlinux.org>

pkgname=kdiff3
pkgver=0.9.94
pkgrel=1
pkgdesc="A KDE file comparator/merge tool"
arch=('i686' 'x86_64')
url="http://kdiff3.sourceforge.net/"
license=('GPL')
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
source=(http://downloads.sourceforge.net/sourceforge/kdiff3/${pkgname}-${pkgver}.tar.gz)
md5sums=('8bf580e53a420b1aa1eca3ea502bbe8b')
sha1sums=('6c59764ea48e19adcf42f0121e1e3aac80777815')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  mkdir release
  cd release
  cmake .. -DCMAKE_INSTALL_PREFIX=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
