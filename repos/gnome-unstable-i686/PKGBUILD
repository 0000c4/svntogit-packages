# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>
pkgname=atk
pkgver=1.29.92
pkgrel=1
pkgdesc="A library providing a set of interfaces for accessibility"
arch=(i686 x86_64)
license=('LGPL')
depends=('glib2>=2.23.5')
makedepends=('pkgconfig' 'gobject-introspection')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.29/${pkgname}-${pkgver}.tar.bz2)
url='http://www.gtk.org/'
sha256sums=('0563ddda6d62657338606b4afdc4b6e50c6cb94cded51ca6a746fac837aff9be')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
