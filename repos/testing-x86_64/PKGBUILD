# $Id$
# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>
# Contributor: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-power-manager
pkgver=3.22.0+2+g8b80e59
pkgrel=1
pkgdesc="System power information and statistics"
url="https://git.gnome.org/browse/gnome-power-manager"
arch=(i686 x86_64)
license=(GPL)
depends=(gtk3 upower dconf)
makedepends=(intltool gnome-common git)
options=(!emptydirs)
_commit=8b80e5955e6c7a8db744b07f0eb754c42729439b  # master
source=("git://git.gnome.org/gnome-power-manager#commit=$_commit")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname
  git describe --tags | sed 's/^GNOME_POWER_MANAGER_//;s/_/./g;s/-/+/g'
}

prepare() {
  cd $pkgname
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $pkgname
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var \
      --libexecdir=/usr/lib/gnome-power-manager \
      --disable-schemas-compile
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}
