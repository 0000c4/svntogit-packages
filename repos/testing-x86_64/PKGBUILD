# $Id: PKGBUILD 13455 2008-09-27 11:03:58Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=libcanberra
pkgver=0.9
pkgrel=1
pkgdesc="A small and lightweight implementation of the XDG Sound Theme Specification"
arch=(i686 x86_64)
license=('LGPL')
depends=('libvorbis' 'gstreamer0.10' 'libtool' 'gtk2>=2.14.3' 'alsa-lib')
makedepends=('gtk-doc')
url=http://0pointer.de/lennart/projects/libcanberra
source=(http://0pointer.de/lennart/projects/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('1c6c63d5461e6a1ae443a124d49f8fb6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --sysconfdir=/etc --prefix=/usr --localstatedir=/var --disable-static --disable-rpath --enable-alsa --enable-null --with-builtin=dso || return 1
  make || return 1
  make -j1 DESTDIR="${pkgdir}" install || return 1
  rm -f ${pkgdir}/usr/lib/*.la
  rm -f ${pkgdir}/usr/lib/gtk-2.0/modules/*.la
}
