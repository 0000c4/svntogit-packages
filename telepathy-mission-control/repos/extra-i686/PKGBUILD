# Contributor: Andreas Zwinkau <beza1e1@web.de>
pkgname=telepathy-mission-control
pkgver=5.4.0
pkgrel=1
pkgdesc="A Telepathy component providing abstraction of some of the details of connection managers."
arch=('i686' 'x86_64')
url="http://mission-control.sourceforge.net/"
license=('LGPL2.1')
depends=('telepathy-glib>=0.10.3' 'libgnome-keyring>=2.30.0')
makedepends=('libxslt' 'python')
options=('!libtool')
source=(http://telepathy.freedesktop.org/releases/telepathy-mission-control/$pkgname-$pkgver.tar.gz)
md5sums=('f40d7a451e97fb3b3a08e441dfab40b3')

build() {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr \
    	--libexecdir=/usr/lib/telepathy \
	--enable-gnome-keyring
    make || return 1
    make DESTDIR="$pkgdir" install || return 1
}
