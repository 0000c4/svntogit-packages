# $Id$
# Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=archlinux-themes-ksplash
pkgver=1.0
pkgrel=1
pkgdesc="Archlinux themes for Ksplash KDE splash screen"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('GPL')
source=(ftp://ftp.archlinux.org/other/artwork/${pkgname}-${pkgver}.tar.gz)
md5sums=('a8a6765169a21679b90f815a2cb8333e')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  mkdir -p $startdir/pkg/opt/kde/share/apps/ksplash/Themes
  mv archlinux-*/ $startdir/pkg/opt/kde/share/apps/ksplash/Themes
}

