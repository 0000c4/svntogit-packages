# Maintainer: Alexander Baldeck <alexander@archlinux.org>

pkgname=koffice-l10n-zh_cn
pkgver=2.0.0
pkgrel=1
pkgdesc="Chinese Simplified KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/koffice-l10n-zh_CN-$pkgver.tar.bz2)
md5sums=('dd7083811844dc7d1e6712e84e391e5d')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../koffice-l10n-zh_CN-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
