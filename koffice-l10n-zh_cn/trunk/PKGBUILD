# $Id$
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-zh_cn
pkgver=2.0.2
pkgrel=1
pkgdesc="Chinese Simplified KOffice translation."
license=('GPL')
arch=('any')
url="http://www.koffice.org"
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/koffice-l10n-zh_CN-$pkgver.tar.bz2)
md5sums=('88973975834ba5161ea2e9f894b500a0')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../koffice-l10n-zh_CN-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
