# Maintainer: Alexander Baldeck <alexander@archlinux.org>

pkgname=koffice-l10n-zh_cn
pkgver=1.9.99.0
pkgrel=1
pkgdesc="Chinese Simplified KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/unstable/koffice-$pkgver/src/koffice-l10n/koffice-l10n-zh_CN-$pkgver.tar.bz2)
md5sums=('26d0367bc39437d36546ee91aeef5c32')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../koffice-l10n-zh_CN-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
