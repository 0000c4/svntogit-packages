# $Id: PKGBUILD 33933 2009-04-06 09:19:46Z ronald $
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-kk
pkgver=2.0.2
pkgrel=1
pkgdesc="Kazakh KOffice translation."
license=('GPL')
arch=('any')
url="http://www.koffice.org"
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('caa40fe356e2ef9e5b0eee0e14dfc39c')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
