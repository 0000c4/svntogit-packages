# $Id$ 
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-themes
pkgver=2.31.90
pkgrel=1
pkgdesc="Default themes for GNOME2"
arch=(any)
license=('LGPL')
depends=('gtk-engines>=2.20.1' 'librsvg>=2.31.0')
makedepends=('intltool' 'icon-naming-utils')
url="http://www.gnome.org"
groups=('gnome')
replaces=('gtk-thinice-engine' 'clearlooks-gtk2')
options=(!makeflags)
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-themes/2.31/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('5955270618ba2db96026d157243f2093869d6197074fefe35d962f78dbc4d572')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var
  make
  make DESTDIR="${pkgdir}" install
}
