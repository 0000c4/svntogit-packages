pkgname=mplayer-skins
pkgver=0.3
pkgrel=1
pkgdesc="Additional Skins for the MPlayer"
arch=(i686 x86_64)
url="http://www.mplayerhq.hu/"
license=('GPL')
depends=('mplayer')

# if you want to see more skins in this list, feel free to contact me
#
# i will not add any xmms-lookalike skins, as you can use xmms itself
# as frontend by using xmms-mplayer plugin

source=(http://www1.mplayerhq.hu/MPlayer/skins/Blue-small-1.4.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/Abyss-1.7.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/disappearer-1.1.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/OSX-Brushed-2.3.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/tvisor-1.1.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/Ater-1.2.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/Corelian-1.1.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/mplayer_red-1.0.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/neutron-1.5.tar.bz2 \
        http://www1.mplayerhq.hu/MPlayer/skins/krystal-1.1.tar.bz2 \
        )
md5sums=('d23eb53e49a519aaab7eaa20942eb905' '550c32dff975a2acd7e34f12d04ed493'\
         '54dc5034dfe8d974206a63c9134941db' 'e0167991859b2cfa77cb5dcddf83c5bb'\
         'a054463d0f011b84f6f6d0161d15a25a' '316e29f7da492edf697baee205fc47c6'\
         'c41ea0934163e0412339eeb9600ec59e' 'a7f9c5f6a6f072a97e04822247e6a415'\
         '1c9ea8d31bddfbd978bedd3b90414dd6' 'b433058faa1b1ef00f0d628a1d38e229')

build() {
  cd $srcdir
  install -d $pkgdir/usr/share/mplayer/skins
  cp -r $srcdir/{Abyss,Blue-small,disappearer,OSX-Brushed,tvisor,Ater,Corelian,mplayer_red,neutron,krystal} $pkgdir/usr/share/mplayer/skins/ || return 1
}
