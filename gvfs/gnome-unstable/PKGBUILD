# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gvfs
pkgver=1.3.6
pkgrel=1
pkgdesc="Userspace virtual filesystem implemented as a pluggable module for gio"
arch=(i686 x86_64)
license=('LGPL')
depends=('libsoup-gnome>=2.27.92' 'libcdio>=0.81' 'fuse>=2.7.4' 'bluez>=4.39' 'smbclient>=3.3.7' 'libgphoto2>=2.4.6-3' 'avahi>=0.6.25' 'libarchive>=2.7.1' 'gnome-disk-utility')
makedepends=('pkgconfig' 'intltool')
url="http://www.gnome.org"
options=(!libtool)
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.3/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('964dbb279e882d8288f14a77fa9fe5bceb0a8ae05c5781d032a6d98a37a3ed52')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --libexecdir=/usr/lib/gvfs || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
