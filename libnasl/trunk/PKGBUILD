# Contributor: Markus Meissner <markus@meissna.de>

pkgname=libnasl
pkgver=2.2.11
pkgrel=1
pkgdesc='A remote security scanner for nessus'
arch=(i686 x86_64)
url="http://www.nessus.org"
license=('GPL2')
options=(!libtool !makeflags)
depends=("nessus-libraries>=${pkgver}" 'openssl>=0.9.8b')
source=('http://downloads.nessus.org/nessus3dl.php?file=libnasl-2.2.11.tar.gz&licence_accept=yes&t=5ce1ef48e8878c675f062296cb4d8f23')
md5sums=('02889e4829b68cb9d0d827ccdba5db1d')

build() {
  cd ${srcdir}/${pkgname}
  ./configure --prefix=/usr --localstatedir=/var --sysconfdir=/etc --mandir=/usr/share/man || return 1
  make || return 1
  make install DESTDIR=${pkgdir} || return 1
}
