# Maintainer: Alexander Baldeck <alexander@archlinux.org>

pkgname=koffice-l10n-ca
pkgver=1.9.99.0
pkgrel=1
pkgdesc="Catalan KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/unstable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('7876e8ea78fd81da56c0d0e0429cb708')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
