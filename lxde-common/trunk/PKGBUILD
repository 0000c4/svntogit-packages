# Maintainer: Juergen Hoetzel <juergen@archlinux.org>
pkgname=lxde-common
pkgver=0.3.2.1
pkgrel=3
pkgdesc="Common files of the LXDE Desktop"
arch=('i686' 'x86_64')
license=('GPL2')
groups=('lxde')
depends=('libx11' 'glib2')
url="http://lxde.org/"
# startlxde is useless without lxsession 
optdepends=(lxsession-lite)
install=${pkgname}.install
source=(http://downloads.sourceforge.net/sourceforge/lxde/${pkgname}-${pkgver}.tar.bz2\
	lxde-common-arch.patch)
md5sums=('f30eee998071ace04e7be33aa8ac6a5b' 'c5be25c1ddbc990e1ab4bb0795032084')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	patch -p0 -i ${startdir}/src/lxde-common-arch.patch || return 1
	./configure --sysconfdir=/etc --prefix=/usr || return 1
	make || return 1
	make DESTDIR="$pkgdir" install || return 1
}

