# Maintainer: Juergen Hoetzel <juergen@archlinux.org>
pkgname=lxde-common
pkgver=0.5.0
pkgrel=1
pkgdesc="Common files of the LXDE Desktop"
arch=('i686' 'x86_64')
license=('GPL2')
groups=('lxde')
depends=('libx11' 'glib2')
url="http://lxde.org/"
# startlxde is useless without lxsession 
optdepends=(lxsession-lite)
source=("http://downloads.sourceforge.net/project/lxde/${pkgname}%20%28default%20config%29/${pkgname}%200.5.0/${pkgname}-0.5.0.tar.gz")
md5sums=('23606ab3d6e1039386d62a4b68b4ffc6')


build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --sysconfdir=/etc --prefix=/usr || return 1
	make || return 1
	make DESTDIR="$pkgdir" install || return 1
}

