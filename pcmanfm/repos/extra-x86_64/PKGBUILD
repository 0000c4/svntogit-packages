# Maintainer: Juergen Hoetzel <juergen@archlinux.org>

pkgname=pcmanfm
pkgver=0.5
pkgrel=3
pkgdesc="File manager of the LXDE Desktop"
arch=('i686' 'x86_64')
url="http://pcmanfm.sourceforge.net/"
license=('GPL')
groups=('lxde')
depends=('gtk2' 'hal' 'fam' 'startup-notification' 'shared-mime-info' 'desktop-file-utils')
makedepends=('intltool' 'pkgconfig')
install=pcmanfm.install
source=(http://downloads.sourceforge.net/pcmanfm/pcmanfm-$pkgver.tar.gz)
md5sums=('fe1a836eed6a42107e7d71a01a52f7ec')
build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --sysconfdir=/etc --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
