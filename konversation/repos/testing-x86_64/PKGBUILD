pkgname=konversation
pkgver=1.2.alpha1
pkgrel=1
pkgdesc="A user friendly IRC client for KDE"
arch=(i686 x86_64)
url="http://konversation.kde.org"
license="GPL"
depends=('kdelibs' 'libxss' 'kdepimlibs' 'qt')
makedepends=('automoc4' 'cmake' 'pkgconfig')
source=(http://download.berlios.de/$pkgname/$pkgname-1.2-alpha1.tar.bz2)

build() {
  cd $srcdir/$pkgname-1.2-alpha1
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make || return 1
  make DESTDIR=$startdir/pkg install
}
md5sums=('36043af54dff0c3a22e042f02db62c28')
