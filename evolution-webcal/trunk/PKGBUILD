# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=evolution-webcal
pkgver=2.24.0
pkgrel=1
pkgdesc="Evolution Web calendar"
arch=(i686 x86_64)
license=('GPL')
install=evolution-webcal.install
url="http://www.ximian.com"
depends=('libgnomeui>=2.24.0' 'evolution-data-server>=2.24.0')
makedepends=('perlxml' 'pkgconfig' 'evolution>=2.24.0')
groups=('gnome-extra')
options=(!emptydirs)
source=(http://ftp.acc.umu.se/pub/GNOME/sources/evolution-webcal/2.24/${pkgname}-${pkgver}.tar.bz2)
md5sums=('8030ebaefb18050c079a71dc23701d82')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --libexecdir=/usr/lib/evolution-webcal \
              --localstatedir=/var  || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
