# $Id: PKGBUILD 22880 2008-12-29 19:39:08Z tpowa $
# Contributor: Paul Mattal <paul@mattal.com>
# Maintainer: Paul Mattal <pjmattal@elys.com>
pkgname=aufs2-util
pkgver=20090406
pkgrel=1
pkgdesc="Another Unionfs Implementation that supports NFS branches"
arch=('i686' 'x86_64')
url="http://aufs.sourceforge.net/"
license=('GPL2')
depends=('glibc')
conflicts=('aufs-utils')
source=(ftp://ftp.archlinux.org/other/$pkgname/$pkgname-$pkgver.tar.bz2)

build() {
  cd $srcdir/aufs2-util || return 1
  # build
  make || return 1
  # install
  mkdir -p $pkgdir/{sbin,usr/bin,etc/default/aufs}
  make DESTDIR=$pkgdir install || return 1
}
md5sums=('b95b7fb236c5fdc475f4fb70b1d0ad52')
