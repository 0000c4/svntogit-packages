# $Id$
# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: deepfreeze <sgrealis1@comcast.net>

pkgname=pan
pkgver=0.132
pkgrel=1
pkgdesc="A powerful Newsgroup Article reader based on GTK2"
arch=('i686' 'x86_64')
url="http://pan.rebelbase.com/"
license=('GPL2')
depends=('gtkspell' 'pcre' 'gmime')
conflicts=('pan-devel')
replaces=('pan-devel')
options=('!makeflags')
source=(http://pan.rebelbase.com/download/releases/${pkgver}/source/${pkgname}-${pkgver}.tar.bz2 \
        preview-fix.patch pan-0.132-gcc43.patch)
md5sums=('2c337dbd5105b7772a4326d549a45638' '8afd4877916523112c78db17cccc4e8a'\
         '0aa6c79728989fd65aacabc8a846cdb4')
sha1sums=('dc0bf586145b9d617039f49101874fbc76a9dc18'
          '371e9376db3808a0d0b98f04699a3afe43cb9ed8'
          '549d20acab82d1183a00057326256128b40eff7d')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  patch -p1 < ../preview-fix.patch || return 1
  patch -p1 < ../pan-0.132-gcc43.patch || return 1
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install
}
