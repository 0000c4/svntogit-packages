# Maintainer: Aaron Griffin <aaron@archlinux.org>

pkgname=mkinitcpio
pkgver=0.5.24
pkgrel=1
pkgdesc="Advanced, modular initramfs image creation utility"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('GPL')
groups=('base')
depends=('klibc>=1.5.15-2' 'klibc-extras>=2.5-3' 'klibc-udev>=141-2'
         'gen-init-cpio' 'klibc-module-init-tools>=3.5-2' 'coreutils'
         'bash' 'klibc-kbd>=1.15.20080312-9' 'findutils' 'sed' 'grep'
	 'filesystem>=2009.01' 'udev>=141-1' 'file' 'gzip')
source=(ftp://ftp.archlinux.org/other/${pkgname}/${pkgname}-${pkgver}.tar.gz)
backup=(etc/mkinitcpio.conf)
replaces=('mkinitrd' 'mkinitramfs')
md5sums=('701de0195e669772198799b718cb0c03')

build()
{
  cd $srcdir/${pkgname}-${pkgver}
  ./install.sh $pkgdir
  mkdir -p $pkgdir/usr/share
  mv $pkgdir/usr/man $pkgdir/usr/share
}
