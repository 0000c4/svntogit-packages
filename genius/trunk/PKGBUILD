# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Arjan Timmerman <arjan@soulfly.nl>

pkgname=genius
pkgver=1.0.5
pkgrel=1
pkgdesc="Advanced calculator including a mathematical programming language"
arch=(i686 x86_64)
license=('GPL')
url="http://www.jirka.org/genius.html"
depends=('gmp>=4.2.4' 'vte>=0.17.4' 'gtksourceview2>=2.4.1' 'libgnomeui>=2.24.0' 'mpfr>=2.3.2' 'desktop-file-utils' 'shared-mime-info')
makedepends=('intltool' 'pkgconfig' 'gnome-doc-utils>=0.14.0')
options=('!libtool' '!makeflags')
install=genius.install
source=(http://ftp.gnome.org/pub/GNOME/sources/genius/1.0/${pkgname}-${pkgver}.tar.bz2)
md5sums=('c81d70d1d17b99536293b1231211a167')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --libexecdir=/usr/lib/genius \
              --localstatedir=/var --disable-static \
	      --enable-gtksourceview --disable-scrollkeeper \
	      --disable-update-mimedb || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
