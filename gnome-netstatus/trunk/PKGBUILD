# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-netstatus
pkgver=2.12.2
pkgrel=1
pkgdesc="A GNOME applet that shows network status"
arch=(i686 x86_64)
license=('GPL')
url="http://www.gnome.org"
depends=('gnome-panel>=2.24.0')
makedepends=('perlxml' 'pkgconfig' 'gnome-doc-utils>=0.14.0')
options=(!emptydirs)
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.12/${pkgname}-${pkgver}.tar.bz2)
install=gnome-netstatus.install
md5sums=('f1f9e18b48d46adb32c9002e4325f80e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --libexecdir=/usr/lib/gnome-netstatus \
              --localstatedir=/var --disable-static \
	      --disable-scrollkeeper || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
