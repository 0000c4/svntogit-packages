pkgname=mythvideo
pkgver=0.22
pkgrel=2
pkgdesc="Video playback and browsing plugin for MythTV"
arch=('i686' 'x86_64')
url="http://www.mythtv.org"
license=('GPL')
depends=("mythtv>=${pkgver}" 'mplayer' 'perlxml' 'perl-libwww' 'perl-uri' 'perl-xml-simple' 'ffmpeg')
source=("ftp://ftp.osuosl.org/pub/mythtv/mythplugins-$pkgver.tar.bz2" \
	mtd)
md5sums=('09c8fa1058399a0c5db169a71561e985' '476c12ba074794ad7f4ae092bdf949d6')
sha1sums=('dc60550ba57173e3a6616d6041042d844d5b638a' 'd5d72cc246685bdfe93ad15d045b410c939a012d')
replaces=('mythdvd')
groups=('mythtv-extras')

build() {
   cd $startdir/src/mythplugins-${pkgver}
   ./configure --prefix=/usr \
     --disable-all \
     \
     --enable-$pkgname
   
   qmake mythplugins.pro 
   make qmake 
   make INSTALL_ROOT=$startdir/pkg install
   install -D -m755 ../mtd $startdir/pkg/etc/rc.d/mtd
}


