# $Id$
# Maintainer: aurelien <aurelien@archlinux.org>

pkgname=xfprint
pkgver=4.4.3
pkgrel=1
pkgdesc="A print dialog and a printer manager for Xfce"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4')
depends=('libxfcegui4>=4.4.3' 'libxfce4mcs>=4.4.3' 'libcups>=1.3.9' 'a2ps' 'heimdal>=1.2-2' 'gnutls>=2.4.1-3' 'hicolor-icon-theme')
makedepends=('xfce-mcs-manager>=4.4.3' 'pkgconfig')
options=('!libtool')
install=${pkgname}.install
source=(http://www.xfce.org/archive/xfce-${pkgver}/src/${pkgname}-${pkgver}.tar.bz2)
md5sums=('7fc2cb1e531d22717b17f9f87711ec05')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
