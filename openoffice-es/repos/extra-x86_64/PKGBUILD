# Contributor: Sarah Hay <sarah@archlinux.org>

pkgname=openoffice-es
pkgver=3.0.0
pkgrel=1
pkgdesc="OpenOffice spanish language files"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.openoffice.org"
makedepends=('rpmextract')
depends=('openoffice-base')
source=(http://ftp-1.gwdg.de/pub/openoffice/extended/3.0.0rc4/OOo_3.0.0rc4_20080930_LinuxIntel_langpack_es.tar.gz)
md5sums=('918727090a02083ff7898020c7e74cc0')

build() {
  cd ${srcdir}/*native_packed*/RPMS
  for i in *.rpm
    do rpmextract.sh $i
  done

  # install openoffice language files
  mkdir -p ${pkgdir}/opt/openoffice/basis-link
  cp -R opt/openoffice.org/basis3.0/* ${pkgdir}/opt/openoffice/basis-link
  cp -R opt/openoffice.org3/* ${pkgdir}/opt/openoffice/basis-link
  chown root:root -R ${pkgdir}/opt/openoffice
}
