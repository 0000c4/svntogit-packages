# $Id: PKGBUILD 2392 2008-06-01 19:38:25Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=mousetweaks
pkgver=2.24.1
pkgrel=1
pkgdesc="Mouse accessibility enhancements for the GNOME desktop"
arch=(i686 x86_64)
license=('GPL3' 'FDL')
depends=('gnome-panel>=2.24.0' 'at-spi>=1.24.0')
makedepends=('perlxml' 'pkgconfig' 'gnome-doc-utils>=0.14.0')
groups=('gnome-extra')
options=('!libtool' '!emptydirs')
url="http://www.gnome.org"
install=mousetweaks.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.24/${pkgname}-${pkgver}.tar.bz2)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-scrollkeeper || return 1
  make || return 1
  make -j1 GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1
 
  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
md5sums=('77df15129778f70b9102f86d0df1f615')
