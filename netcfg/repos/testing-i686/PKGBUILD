# $Id$
# Maintainer: James Rayner <james@archlinux.org>
pkgname=netcfg
pkgver=2.1.3
pkgrel=3
pkgdesc="Network configuration and profile scripts"
url="http://archlinux.org"
license=("BSD")
backup=(etc/iftab)
depends=(wireless_tools coreutils "wpa_supplicant>=0.6.8" net-tools "dhcpcd>=4.0")
optdepends=(dialog)
source=(wpa_conf.diff http://ftp.archlinux.org/other/netcfg/netcfg-$pkgver.tar.gz)

#source=(netcfg-$pkgver.tar.gz)
arch=(i686 x86_64)

build() {
  cd $startdir/src/netcfg-$pkgver
  sed -i 's|/man/|/share/man/|' Makefile
  patch -p1 -i $startdir/src/wpa_conf.diff 
  make DESTDIR=$startdir/pkg install
  make DESTDIR=$startdir/pkg install-contrib
  install -D -m644 LICENSE $startdir/pkg/usr/share/licenses/netcfg/LICENSE
 
  # Uncomment once initscripts patch merged
  ln -s /usr/bin/netcfg2 $startdir/pkg/usr/bin/netcfg 
}

md5sums=('fb886083e9309e2b9aad43bede40c070'
         'dab5e9fd3b01e027408845928c79396f')
