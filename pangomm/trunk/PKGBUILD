# $Id: PKGBUILD 5595 2008-07-18 21:58:26Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pangomm
pkgver=2.13.7
pkgrel=1
pkgdesc="C++ bindings for pango"
arch=(i686 x86_64)
license=('LGPL')
depends=('pango>=1.21.5' 'glibmm>=2.17.2' 'cairomm>=1.6.0')
makedepends=('pkgconfig')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.13/${pkgname}-${pkgver}.tar.bz2)
conflicts=('gtkmm<2.13.0')
options=('!libtool')
url="http://gtkmm.sourceforge.net/"
md5sums=('148578fbfa7286de2141f3291d64d1e3')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
  rm -rf ${pkgdir}/usr/share/devhelp || return 1
}
