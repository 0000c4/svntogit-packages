# $Id$
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=ristretto
pkgver=0.0.91
pkgrel=1
pkgdesc="Ristretto is a image viewer for Xfce"
arch=('i686' 'x86_64')
url="http://goodies.xfce.org/projects/applications/ristretto"
license=('GPL2')
depends=('libxfcegui4' 'desktop-file-utils' 'hicolor-icon-theme' 'libexif')
makedepends=('intltool' 'pkgconfig')
options=('!libtool')
groups=('xfce4-goodies')
source=(http://archive.xfce.org/src/apps/$pkgname/0.0/$pkgname-$pkgver.tar.bz2)
install=ristretto.install
md5sums=('1df541b920f044ac9f3731b2a0fe02d1')

build() {
  cd ${srcdir}/$pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {
  cd ${srcdir}/$pkgname-$pkgver
  make DESTDIR=${pkgdir} install
}
