# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-mag
pkgver=0.15.8
pkgrel=1
pkgdesc="Gnome magnifier"
arch=(i686 x86_64)
license=('GPL')
url="http://www.gnome.org"
depends=('at-spi>=1.27.90')
makedepends=('intltool' 'pkgconfig')
options=('!libtool')
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-mag/0.15/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('c9ed20c85f9be37e5b90eb326e7093e46e34962ec67528f93dbd22033bd0dee2')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
