pkgname=lucene
pkgver=2.0.0
pkgrel=1
pkgdesc="A high-performance, full-featured text search engine library written entirely in Java"
url="http://lucene.apache.org/java/docs/index.html"
license="APL"
depends=(j2re)
makedepends=()
conflicts=()
replaces=()
backup=()
install=
source=(http://www.mirrorservice.org/sites/ftp.apache.org/lucene/java/lucene-2.0.0.tar.gz)
md5sums=('5d5e0d2991d72933542207747389a650')

build() {

	mkdir -p $startdir/pkg/usr/share/java/$pkgname
	cp $startdir/src/$pkgname-$pkgver/$pkgname-core-$pkgver.jar $startdir/pkg/usr/share/java/$pkgname/
}

