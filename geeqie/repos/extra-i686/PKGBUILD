# $Id: PKGBUILD 356 2008-04-18 22:56:27Z aaron $
# Maintainer: Eric Belanger <eric@archlinux.org>
# Contributor: Lukas Jirkovsky <l.jirkovsky@gmail.com>

pkgname=geeqie
pkgver=1.0alpha2
pkgrel=2
pkgdesc="A lightweight image browser and viewer (fork of GQview)"
arch=('i686' 'x86_64')
url="http://geeqie.sourceforge.net/"
license=('GPL3')
depends=('exiv2>=0.16' 'gtk2' 'lcms')
replaces=('gqview-devel')
source=(http://downloads.sourceforge.net/sourceforge/geeqie/${pkgname}-${pkgver}.tar.gz)
md5sums=('3a9acd46defdebe7444cc9f46fdfa956')
sha1sums=('5591b02bc9af7e1d9a0b08b151c87a2519b8a26b')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
