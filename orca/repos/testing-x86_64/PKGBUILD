# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: William Rea <sillywilly@gmail.com>

pkgname=orca
pkgver=2.24.1
pkgrel=2
pkgdesc="A scriptable screen reader and magnifier"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.gnome.org/projects/orca"
install=orca.install
options=('!libtool')
depends=('gnome-python>=2.22.3' 'gnome-speech>=0.4.21' 'gnome-mag>=0.15.4' 'brltty' 'libgail-gnome')
makedepends=('perlxml' 'pkgconfig' 'intltool')
replaces=('gnopernicus')
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.24/${pkgname}-${pkgver}.tar.bz2)
md5sums=('bbd3a5f9a5641075c11b60966ba4b1f4')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
