# $Id$
# Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=archlinux-themes-kde
pkgver=1.0
pkgrel=1
pkgdesc="Archlinux artwork and themes for KDE"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('GPL')
depends=('archlinux-artwork' 'archlinux-wallpaper' \
         'archlinux-themes-kdm' 'archlinux-themes-ksplash')
source=(ftp://ftp.archlinux.org/other/artwork/${pkgname}-${pkgver}.tar.gz)
md5sums=('b9bf3ac6cb8f668678e05f80aa8e1d4f')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}

  # login pic
  mkdir -p $pkgdir/opt/kde/share/apps/kdm/pics/users
  cp Arch-kdm.png $pkgdir/opt/kde/share/apps/kdm/pics/users/

  # shutdown screen
  mkdir -p $pkgdir/opt/kde/share/apps/ksmserver/pics
  cp shutdownkonq.png $pkgdir/opt/kde/share/apps/ksmserver/pics/

  # link arch wallpapers to KDE's default wallpaper dir
  mkdir -p $pkgdir/opt/kde/share/wallpapers
  ln -sf /usr/share/archlinux/wallpaper/*.* \
  $pkgdir/opt/kde/share/wallpapers/
}

