# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-media
pkgver=2.24.0.1
pkgrel=1
pkgdesc="GNOME Media Tools"
arch=(i686 x86_64)
license=('GPL')
depends=('libgnomeui>=2.24.0' 'gstreamer0.10-good-plugins' 'gstreamer0.10-base-plugins')
makedepends=('perlxml' 'pkgconfig' 'gnome-doc-utils>=0.14.0')
url="http://www.gnome.org"
groups=('gnome')
options=('!libtool' '!emptydirs')
install=gnome-media.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.24/${pkgname}-${pkgver}.tar.bz2)
md5sums=('d0a9b0784872cecd09038aceea22e16f')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --libexecdir=/usr/lib/gnome-media \
              --localstatedir=/var --disable-static \
	      --disable-scrollkeeper || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1
  
  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas
}
