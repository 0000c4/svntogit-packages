# $Id$
# Maintainer: damir <damir@archlinux.org>

pkgname=libnet
pkgver=1.1.2.1
pkgrel=2
pkgdesc="A library which provides API for commonly used low-level net functions."
arch=('i686' 'x86_64')
url="http://www.packetfactory.net/libnet"
license=('BSD')
depends=('glibc')
source=(http://www.packetfactory.net/libnet/dist/$pkgname-$pkgver.tar.gz)
md5sums=('be845c41170d72c7db524f3411b50256')

build() {
  cd $srcdir/$pkgname
  ./configure --prefix=/usr || return 1
  make CFLAGS="${CFLAGS} -fPIC"  || return 1
  make DESTDIR=$pkgdir install install-man || return 1
  install -D -m755 libnet-config $pkgdir/usr/bin/libnet-config || return 1
  install -d $pkgdir/usr/share/man/man3
  install -m644 doc/man/man3/* $pkgdir/usr/share/man/man3/
  install -D -m644 doc/COPYING $pkgdir/usr/share/licenses/$pkgname/LICENSE || return 1
}
