# $Id$
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgbase=kdeedu
pkgname=('kdeedu-blinken'
         'kdeedu-data'
         'kdeedu-kalgebra'
         'kdeedu-kalzium'
         'kdeedu-kanagram'
         'kdeedu-kbruch'
         'kdeedu-kgeography'
         'kdeedu-khangman'
         'kdeedu-kig'
         'kdeedu-kiten'
         'kdeedu-klettres'
         'kdeedu-kmplot'
         'kdeedu-kstars'
         'kdeedu-ktouch'
         'kdeedu-kturtle'
         'kdeedu-kwordquiz'
         'kdeedu-libkdeedu'
         'kdeedu-marble'
         'kdeedu-parley'
         'kdeedu-step')
pkgver=4.2.90
pkgrel=2
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
groups=('kde' 'kdeedu')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'ocaml' 'facile' 'eigen>2.0.2' 'cfitsio' 'kdelibs' 'kdebase-runtime' 'openbabel' 'libqalculate' 'gsl' 'boost' 'indilib')
source=("http://download.kde.org/unstable/${pkgver}/src/${pkgbase}-${pkgver}.tar.bz2")
md5sums=('9c35e4349c0217bd5dcff8b4f34b82e1')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgbase}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_{SHARED,MODULE,EXE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed' \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
}

package_kdeedu-blinken() {
	pkgdesc='the KDE version of the well-known game Simon Says'
	depends=('kdebase-runtime' 'kdeedu-libkdeedu')
	install='kdeedu.install'
	cd $srcdir/build/blinken
	make DESTDIR=$pkgdir install
	cd $srcdir/build/doc/blinken
	make DESTDIR=$pkgdir install
}

package_kdeedu-data() {
	pkgdesc=''
	groups=()
	install='kdeedu.install'
	cd $srcdir/build/data
	make DESTDIR=$pkgdir install
}

