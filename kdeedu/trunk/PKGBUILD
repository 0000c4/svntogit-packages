# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kdeedu
pkgver=4.1.0
pkgrel=1
pkgdesc="KDE Educational programs"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
groups=('kde')
depends=('kdebase-workspace' 'boost' 'openbabel' 'indilib' 'libnova' 'libqalculate' 'gsl')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'ocaml' 'facile' 'eigen' 'cfitsio' 'gmm++')
options=('docs')
source=("ftp://ftp.archlinux.org/other/kde/${pkgname}-${pkgver}.tar.bz2")
md5sums=('49c374e8ad6dc00e767a30bb156754a2')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
	# provided by indilib
	rm -f $pkgdir/usr/bin/indiserver
}
