# $Id$
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kdeedu
pkgver=4.2.2
pkgrel=1
pkgdesc="KDE Educational programs"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL' 'FDL')
groups=('kde')
depends=('kdelibs' 'kdebase-runtime' 'openbabel' 'libqalculate' 'gsl' 'boost' 'indilib')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'ocaml' 'facile' 'eigen' 'cfitsio' 'gmm++')
options=('docs')
install='kdeedu.install'
source=("http://download.kde.org/stable/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('132724e6d8d874372c218ed138cb2091')

build() {
	cd $srcdir
	mkdir build
	cd build
	# Note: --as-needed needs a binutils fix; see http://www.mail-archive.com/bug-gsl@gnu.org/msg00788.html
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DCMAKE_{SHARED,MODULE}_LINKER_FLAGS='-Wl,--no-undefined -Wl,--as-needed' \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
