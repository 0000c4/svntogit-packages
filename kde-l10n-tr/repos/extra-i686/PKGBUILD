# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-tr
pkgver=4.2.1
pkgrel=1
pkgdesc="Turkish Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
groups=('kde-l10n')
replaces=('kde-i18n-tr')
provides=('kde-i18n-tr')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdelibs')
options=('docs')
source=("http://download.kde.org/stable/${pkgver}/src/kde-l10n/${pkgname}-${pkgver}.tar.bz2")
md5sums=('8ce5790512f818320804967a6e5c6204')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
