# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kio_gopher
pkgver=0.1.2
_kdever=4.1.3
pkgrel=2
pkgdesc="Gopher kioslave"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
groups=('kde-extragear')
depends=('kdebase-runtime')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("http://download.kde.org/stable/${_kdever}/src/extragear/${pkgname}-${pkgver}-kde${_kdever}.tar.bz2")
md5sums=('397347c8279389cbe1c819f0c8adf56d')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver}-kde${_kdever} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
