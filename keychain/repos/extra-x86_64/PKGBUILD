# Contributor: Benjamin Andresen <benny@klapmuetz.org>

pkgname=keychain
pkgver=2.6.8
pkgrel=3
pkgdesc="A front-end to ssh-agent, allowing one long-running ssh-agent process per system, rather than per login."
arch=('i686' 'x86_64')
url="http://www.gentoo.org/proj/en/keychain/"
license=('GPL')
depends=('bash')
source=(http://agriffis.n01se.net/keychain/${pkgname}-${pkgver}.tar.bz2)
md5sums=('2a23b311e438ecebed5639b568738d28')
sha1sums=('0c1b645b68b9fe23bfe217963df45a033d84fe9c')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  install -D -m755 keychain ${pkgdir}/usr/bin/keychain
  install -D -m644 keychain.1 ${pkgdir}/usr/share/man/man1/keychain.1
}
