# $Id$
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kdebindings
pkgver=4.2.0
pkgrel=1
pkgdesc="KDE Language Bindings"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL' 'LGPL')
depends=('kdepimlibs' 'pyqt')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'sip')
options=('docs')
source=("http://download.kde.org/stable/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('6eae8fd968da83fe65e592993e416adc')

build() {
	cd $srcdir
	mkdir build
	cd build

	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_csharp=OFF \
		-DBUILD_java=OFF \
		-DBUILD_php=OFF \
		-DBUILD_ruby=OFF \
		-DBUILD_falcon=OFF \
		-DBUILD_smoke=OFF 
	make
	make DESTDIR=$pkgdir install
}
