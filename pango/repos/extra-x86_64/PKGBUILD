# $Id$ 
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pango
pkgver=1.22.3
pkgrel=2
pkgdesc="A library for layout and rendering of text"
arch=(i686 x86_64)
license=('LGPL')
depends=('glib2>=2.18.3' 'cairo>=1.8.4' 'libxft>=2.1.13' 'libthai>=0.1.9')
makedepends=('pkgconfig' 'libxt')
options=('!libtool' '!emptydirs')
install=pango.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.22/${pkgname}-${pkgver}.tar.bz2
	bgo563356.patch)
url="http://www.pango.org/"
md5sums=('8909ddbde2f2e91eb0c79202e1051a84' '1fa869245c08672364498322777abc7d')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np1 -i "${srcdir}/bgo563356.patch" || return 1
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
