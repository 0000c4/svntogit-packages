# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pygobject
pkgver=2.21.5
pkgrel=1
pkgdesc="Python bindings for GObject"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('python2' 'glib2>=2.25.15' 'pycairo>=1.8.10' 'gobject-introspection>=0.9.5')
source=(http://ftp.gnome.org/pub/gnome/sources/pygobject/2.21/${pkgname}-${pkgver}.tar.bz2)
options=('!libtool')
url="http://www.pygtk.org/"
sha256sums=('14dc23bd8adb3626cfbaa7b7df1070c8da260e60925ec83beac517d7155cfed8')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
