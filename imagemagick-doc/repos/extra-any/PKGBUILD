# Maintainer: Daniel J Griffiths <ghost1227@archlinux.us>

pkgname=imagemagick-doc
pkgver=6.6.1.10
pkgrel=1
pkgdesc="The ImageMagick documentation (utilities manuals and libraries API)"
arch=('any')
url="http://www.imagemagick.org/"
license=('custom')
depends=('imagemagick')
options=('!makeflags')
source=(ftp://ftp.imagemagick.org/pub/ImageMagick/ImageMagick-${pkgver%.*}-${pkgver##*.}.tar.xz)
md5sums=('d82e1331362f99790548e3e94777eb81')
sha1sums=('72c73c3392420e64c9f8574163cff2a03f353636')

build() {
	cd ${srcdir}/ImageMagick-${pkgver%.*}-${pkgver##*.}
	./configure --prefix=/usr || return 1
}

package() {
	cd ${srcdir}/ImageMagick-${pkgver%.*}-${pkgver##*.}
	make DESTDIR=${pkgdir} install-data-html || return 1
	install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1
	install -Dm644 NOTICE ${pkgdir}/usr/share/licenses/${pkgname}/NOTICE || return 1
}
