# Contributor: Eric Belanger <eric@archlinux.org>

pkgname=imagemagick-doc
pkgver=6.6.0.0
pkgrel=1
pkgdesc="The ImageMagick documentation (utilities manuals and libraries API)"
arch=('any')
url="http://www.imagemagick.org/"
license=('custom')
depends=('imagemagick')
options=('!makeflags')
source=(ftp://ftp.imagemagick.org/pub/ImageMagick/ImageMagick-${pkgver%.*}-${pkgver##*.}.tar.xz)
md5sums=('f761490fc7120088ba6e7b6952717636')
sha1sums=('7bfa3333a810c460950209cc9b0c86abd641ff0c')

build() {
  cd "${srcdir}/ImageMagick-${pkgver%.*}-${pkgver##*.}"
  ./configure --prefix=/usr || return 1
  make DESTDIR="${pkgdir}" install-data-html || return 1
  install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE" || return 1
  install -D -m644 NOTICE "${pkgdir}/usr/share/licenses/${pkgname}/NOTICE" || return 1
}
