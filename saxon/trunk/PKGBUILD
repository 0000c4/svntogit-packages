pkgname=saxon
pkgver=9.2.0.2
pkgrel=1
pkgdesc="XSLT 2.0 / XPath 2.0 / XQuery 1.0 processor for Java - the open source Home Edition"
url="http://saxon.sourceforge.net/"
arch=('i686' 'x86_64')
license=('MPL')
depends=('java-runtime' 'bash')
provides=('java-saxon=9')
conflicts=('java-saxon6')
source=(http://downloads.sourceforge.net/project/saxon/Saxon-HE/9.2/saxonhe${pkgver/./_}j.zip)
#"http://sourceforge.net/projects/saxon/files/saxon/saxonb9-1-0-7j.zip/download" "java-saxon.sh")

build() {
	# As the ZIP package does not contain any installer, the files
	# are copied manually
	
	# copy the JARs
	mkdir -p ${pkgdir}/usr/share/java/saxon || return 1;
	cp ${srcdir}/*.jar ${pkgdir}/usr/share/java/saxon || return 1;
	# copy the launcher
	mkdir -p ${pkgdir}/usr/bin ||Ã‚ return 1;
	install -m 755 java-saxon.sh ${pkgdir}/usr/bin/java-saxon || return 1;
}

