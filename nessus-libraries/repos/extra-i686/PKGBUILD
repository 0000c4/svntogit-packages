pkgname=nessus-libraries
pkgver=2.2.11
pkgrel=1
pkgdesc='The nessus libraries'
arch=(i686 x86_64)
url="http://www.nessus.org"
license=('LGPL')
depends=('glibc' 'bash')
options=(!libtool)
source=('http://downloads.nessus.org/nessus3dl.php?file=nessus-libraries-2.2.11.tar.gz&licence_accept=yes&t=5ce1ef48e8878c675f062296cb4d8f23')
md5sums=('c1180bec3a7f1b78d4d881f9a73e99bc')

build() {
  cd ${srcdir}/${pkgname}
  ./configure --prefix=/usr --mandir=/usr/share/man --localstatedir=/var || return 1
  make || return 1
  make install DESTDIR=${pkgdir} || return 1
}
