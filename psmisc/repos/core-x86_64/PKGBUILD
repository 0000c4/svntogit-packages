# $Id$
# Maintainer: Eric Belanger <eric@archlinux.org>

pkgname=psmisc
pkgver=22.6
pkgrel=2.1
pkgdesc="Miscellaneous procfs tools"
arch=('i686' 'x86_64')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
groups=('base')
depends=('glibc' 'ncurses')
source=(http://downloads.sourceforge.net/psmisc/${pkgname}-${pkgver}.tar.gz psmisc.checkregs.fix.patch)
md5sums=('2e81938855cf5cc38856bd4a31d79a4c' '143116f9c1a6ed14645cf34f76e97239')
sha1sums=('cb15c23e9cfe618e9de5f066525bce7dc7b77421' 'cda61d954cc16d5331a4e3e78a30ef61fa798ef3')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -p0 < ../psmisc.checkregs.fix.patch || return 1
  autoreconf || return 1
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
