# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>
pkgname=ipod-sharp
pkgver=0.8.0
pkgrel=1
pkgdesc="C# bindings for libipoddevice"
arch=(i686 x86_64)
license=('GPL')
url="http://banshee-project.org/Ipod-sharp"
depends=('podsleuth')
options=(!makeflags)
source=(http://download.banshee-project.org/ipod-sharp/${pkgname}-${pkgver}.tar.gz)
md5sums=('ecb58c18599035fca34935a1287584f3')

build() {
  export MONO_SHARED_DIR=${startdir}/src/.wabi
  mkdir -p "${MONO_SHARED_DIR}"

  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr --disable-docs --disable-static
  make || return 1
  make DESTDIR=${startdir}/pkg install

  rm -fr "${MONO_SHARED_DIR}"
}
