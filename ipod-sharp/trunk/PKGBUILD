# $Id$
# Maintainer: Hugo Doria <hugo@archlinux.org>

pkgname=ipod-sharp
pkgver=0.8.1
pkgrel=2
pkgdesc="C# bindings for libipoddevice"
arch=('i686' 'x86_64')
license=('GPL')
url="http://banshee-project.org/Ipod-sharp"
depends=('podsleuth')
options=(!makeflags)
source=(http://download.banshee-project.org/${pkgname}/${pkgname}-${pkgver}.tar.gz)
md5sums=('c4a13c36acc50bb5c13e5ef953557ea5')

build() {
  export MONO_SHARED_DIR=${startdir}/src/.wabi
  mkdir -p "${MONO_SHARED_DIR}"

  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr --disable-docs --disable-static
  make || return 1
  make DESTDIR=${startdir}/pkg install

  rm -fr "${MONO_SHARED_DIR}"
}
