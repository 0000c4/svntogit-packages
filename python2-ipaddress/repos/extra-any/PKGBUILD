check() {
  # Not included in release tarball
  cd ipaddress-$pkgver
  # python2 test_ipaddress.py
}

package() {
  cd ipaddress-$pkgver
  python2 setup.py install --root="$pkgdir/" --optimize=1
  install -Dm644 ../LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
