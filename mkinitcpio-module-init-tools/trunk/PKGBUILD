# Contributor: judd <jvinet@zeroflux.org>

pkgname=mkinitcpio-module-init-tools
pkgver=3.10
pkgrel=1
pkgdesc="utilities needed by Linux systems for managing loadable kernel modules - runtime for initramfs"
arch=('i686' 'x86_64')
url="http://kerneltools.org"
license=('GPL')
depends=('uclibc-runtime' 'gcc-uclibc-libs')
makedepends=('gcc-uclibc' 'uclibc')
source=(http://www.kernel.org/pub/linux/utils/kernel/module-init-tools/module-init-tools-$pkgver.tar.bz2)
md5sums=('fcde0344ad07c4ae2ae6b40918fd092d')

build() {
  cd "${srcdir}/module-init-tools-${pkgver}"

  # TODO: i686 support
  export CHOST=x86_64-unknown-linux-uclibc
  ./configure --host=${CHOST}
  make || return 1
  install -d -m755 "${pkgdir}/usr/lib/initramfs/base"
  install -m755 build/{depmod,insmod,modinfo,modprobe,rmmod} "${pkgdir}/usr/lib/initramfs/base/"
}
