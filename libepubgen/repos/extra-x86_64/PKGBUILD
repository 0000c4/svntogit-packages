# $Id$
# Maintainer: AndyRTR <andyrtr@archlinux.org>

pkgname=libepubgen
pkgver=0.0.1
pkgrel=1
epoch=
pkgdesc="an EPUB generator for librevenge"
arch=('x86_64')
url="https://sourceforge.net/projects/libepubgen/"
license=('MPL2')
depends=('librevenge')
makedepends=('boost' 'cppunit' 'doxygen')
source=("https://sourceforge.net/projects/$pkgname/files/$pkgname-$pkgver/$pkgname-$pkgver.tar.xz")
sha1sums=('e5fa47a1b0ecf298e9848668c704f67199cfe9e4')

build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

check() {
	cd "$pkgname-$pkgver"
	make check
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
