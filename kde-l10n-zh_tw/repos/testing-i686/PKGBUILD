# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-zh_tw
pkgver=4.1.0
pkgrel=1
pkgdesc="Chinese Traditional Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
replaces=('kde-i18n-zh_tw')
provides=('kde-i18n-zh_tw')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("ftp://ftp.archlinux.org/other/kde/l10n/kde-l10n-zh_TW-${pkgver}.tar.bz2")
md5sums=('497580db4cbc61744be6741d193fbb83')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../kde-l10n-zh_TW-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
