# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-gl
pkgver=4.1.0
pkgrel=1
pkgdesc="Galician Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
replaces=('kde-i18n-gl')
provides=('kde-i18n-gl')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("ftp://ftp.archlinux.org/other/kde/l10n/${pkgname}-${pkgver}.tar.bz2")
md5sums=('de4c551b47566f6dc851a812d7ffe92e')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}