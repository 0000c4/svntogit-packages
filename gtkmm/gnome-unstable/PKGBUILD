pkgname=gtkmm
pkgver=2.17.9.3
pkgrel=1
pkgdesc="Gtk-- (gtkmm) is a C++ interface for the popular GUI library gtk+"
arch=(i686 x86_64)
depends=('gtk2>=2.17.11' 'pangomm>=2.25.1.3' 'glibmm>=2.21.4.2')
license=('LGPL')
options=('!libtool' '!emptydirs')
url="http://gtkmm.sourceforge.net/"
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.17/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('cf6813480dbb009bd687e0002b7ca3d8d243f79b233a6c7c6877d098cae7fffc')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
