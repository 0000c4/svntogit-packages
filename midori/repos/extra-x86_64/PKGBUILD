# Contributor: Johannes Krampf <wuischke.at.amule.dot.org>

pkgname=midori
pkgver=0.0.19
pkgrel=3
pkgdesc="A lightweight web browser based on Gtk WebKit"
arch=('i686' 'x86_64')
url="http://www.twotoasts.de/index.php?/pages/midori_summary.html"
license=('GPL')
depends=('gtksourceview2' 'libwebkit')
optdepends=('gvfs: support for source viewing')
makedepends=('pkgconfig' 'libxml2' 'intltool')
source=(http://www.twotoasts.de/media/$pkgname/$pkgname-$pkgver.tar.bz2)
md5sums=('9aad2b84d59aa2135733d5bae5194967')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./autogen.sh
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
