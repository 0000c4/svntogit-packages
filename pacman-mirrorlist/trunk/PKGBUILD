# $Id$
# Maintainer: Dan McGee <dan@archlinux.org>

pkgname=pacman-mirrorlist
pkgver=20101223
pkgrel=1
pkgdesc="Arch Linux mirror list for use by pacman"
arch=('any')
url="http://www.archlinux.org/mirrorlist/"
license=('GPL')
backup=(etc/pacman.d/mirrorlist)
source=(mirrorlist)

# keep an upgrade path for older installations
PKGEXT='.pkg.tar.gz'

# NOTE on building this package:
# * Go to the trunk/ directory
# * Run bash -c ". PKGBUILD; updatelist"
# * Update the checksums, update pkgver
# * Build the package

updatelist() {
  wget -O mirrorlist http://www.archlinux.org/mirrorlist/all/
}

build() {
  mkdir -p $pkgdir/etc/pacman.d
  install -m644 $srcdir/mirrorlist $pkgdir/etc/pacman.d/
}

md5sums=('7ee1d91483c005c6f2c9b74d6422482d')
sha256sums=('9858d2421c46e005f87cc08fd7920e0a4cc91b4f65537935dbab3444e6460998')
