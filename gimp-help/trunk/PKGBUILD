package_gimp-help-de() {
  pkgdesc="A GIMP help system designed for use with the internal GIMP help browser, external web browser and HTML renderers - German version"
  cd "${srcdir}/${pkgbase}-2"
  make LANGUAGE=de DESTDIR="${pkgdir}" install
}

