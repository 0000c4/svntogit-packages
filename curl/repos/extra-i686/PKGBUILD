pkgname=curl
pkgver=7.19.2
pkgrel=1
pkgdesc="An URL retrival utility and library"
arch=('i686' 'x86_64')
url="http://curl.haxx.se"
license=('MIT')
depends=('zlib' 'openssl>=0.9.8b' 'bash' 'ca-certificates')
options=('!libtool')
source=(http://curl.haxx.se/download/${pkgname}-${pkgver}.tar.bz2)
md5sums=('3a461b145a4a31fe7d5a44684e7fbdbc')
sha1sums=('ba6273faca36e8e81046578080174160212ad73a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --without-libidn --disable-ldap \
    --with-ca-bundle=/etc/ssl/certs/ca-certificates.crt || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
  install -D -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/COPYING || return 1
}
