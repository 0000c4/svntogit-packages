# $Id: PKGBUILD 356 2008-04-18 22:56:27Z aaron $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=ptlib
pkgver=2.3.1
pkgrel=1
pkgdesc="Portable Windows Library"
arch=(i686 x86_64)
url="http://www.ekiga.org/"
license=('GPL')
depends=('gcc-libs>=4.3.2' 'openssl>=0.9.8h' 'libavc1394>=0.5.3' 'alsa-lib>=1.0.17a' 'libdv>=1.0.0' 'sdl>=1.2.13')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.3/${pkgname}-${pkgver}.tar.bz2)
md5sums=('bd495deba21a292348bb57ae2cb05d6a')

build() {
  cd ${startdir}/src/ptlib-${pkgver}
  ./configure --prefix=/usr --libdir=/usr/lib \
              --sysconfdir=/etc --localstatedir=/var \
  	      --enable-opal --enable-plugins \
	      --enable-oss --enable-v4l2 \
	      --enable-avc --enable-sdl \
	      --enable-ipv6 --enable-v4l \
	      --enable-dc || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
