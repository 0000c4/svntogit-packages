[Unit]
Description=MySQL database server
After=syslog.target

[Service]
User=mysql
Group=mysql

ExecStart=/usr/bin/mysqld --user=mysql --pid-file=/var/run/mysqld/mysqld.pid 
ExecStartPost=/usr/bin/mysqld-post

PIDFile=/var/run/mysqld/mysqld.pid
Restart=always
PrivateTmp=true

[Install]
WantedBy=multi-user.target
