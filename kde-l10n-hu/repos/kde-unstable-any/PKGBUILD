# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-hu
pkgver=4.2.98
pkgrel=1
pkgdesc="Hungarian Localization for KDE"
arch=('any')
url='http://www.kde.org'
license=('GPL')
groups=('kde-l10n')
replaces=('kde-i18n-hu')
provides=('kde-i18n-hu')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdelibs')
options=('docs')
source=("http://download.kde.org/unstable/${pkgver}/src/kde-l10n/${pkgname}-${pkgver}.tar.bz2")
md5sums=('05d7a123fb413dadb9d4b3fc3da68b58')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
