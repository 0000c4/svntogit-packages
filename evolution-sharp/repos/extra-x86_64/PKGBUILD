# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=evolution-sharp
pkgver=0.18.1
pkgrel=1
pkgdesc="C# bindings for Novell Evolution"
arch=(i686 x86_64)
license=('GPL')
url="http://ftp.gnome.org/pub/GNOME/sources/evolution-sharp/"
depends=('evolution-data-server>=2.24.1.1')
makedepends=('pkgconfig' 'gtk-sharp-2>=2.12.6')
options=('!libtool')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/0.18/${pkgname}-${pkgver}.tar.bz2)
md5sums=('85fb9417093e54ef1da7c8248f94472e')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  export MONO_SHARED_DIR="${startdir}/src/.wabi"
  mkdir -p "${MONO_SHARED_DIR}"

  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static || return 1
  make DESTDIR="${pkgdir}" install || return 1
  rm -f "${pkgdir}/usr/lib/libevolutionglue.a"
} 

