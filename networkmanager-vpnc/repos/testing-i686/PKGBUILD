# $Id$
# Maintainer: Ionut Biru <ionut@archlinux.ro>

pkgname=networkmanager-vpnc
pkgver=0.7.997
pkgrel=1
pkgdesc="NetworkManager VPN plugin for vpnc"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.gnome.org/projects/NetworkManager/"
depends=('networkmanager>=0.7.998' 'vpnc')
makedepends=('intltool' 'gtk2' 'libglade' 'gconf' 'gnome-keyring')
optdepends=('network-manager-applet: GNOME frontends to NetWorkmanager')
options=('!libtool')
install=networkmanager-vpnc.install
source=(ftp://ftp.archlinux.org/other/NetworkManager-vpnc/NetworkManager-vpnc-${pkgver}.tar.bz2)
#source=(http://ftp.gnome.org/pub/GNOME/sources/NetworkManager-vpnc/0.7/NetworkManager-vpnc-${pkgver}.tar.bz2)
sha256sums=('3b420cee67e47c7ff700e220db43717b8e320dcce111e94ed4cf3be0c02542a6')

build() {
  cd "${srcdir}/NetworkManager-vpnc-${pkgver}"
  ./configure --prefix=/usr \
  	--sysconfdir=/etc \
	--libexecdir=/usr/lib/networkmanager \
	--disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
