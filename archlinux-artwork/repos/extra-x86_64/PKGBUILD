# $Id$
# Maintainer: Thayer Williams <thayer@archlinux.org>

pkgname=archlinux-artwork
pkgver=1.0
pkgrel=2
pkgdesc="Official logos, icons, CD labels and other artwork for Arch Linux"
arch=(i686 x86_64)
url="http://www.archlinux.org/"
license=('CCPL:by-nc-sa')
install=archlinux-artwork.install
source=(ftp://ftp.archlinux.org/other/artwork/${pkgname}-${pkgver}.tar.gz)
md5sums=('f8ffcf460f592d1b1e001575943d5a84')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  install -m755 -d ${startdir}/pkg/usr/share/archlinux/cd-labels
  install -m755 -d ${startdir}/pkg/usr/share/archlinux/icons
  install -m755 -d ${startdir}/pkg/usr/share/archlinux/logos
  install -m755 -d ${startdir}/pkg/usr/share/archlinux/wmlogos

  install -m644 FONTS ${startdir}/pkg/usr/share/archlinux/
  install -m644 cd-labels/* ${startdir}/pkg/usr/share/archlinux/cd-labels/
  install -m644 icons/* ${startdir}/pkg/usr/share/archlinux/icons/
  install -m644 logos/* ${startdir}/pkg/usr/share/archlinux/logos/
  install -m644 wmlogos/* ${startdir}/pkg/usr/share/archlinux/wmlogos/
}

