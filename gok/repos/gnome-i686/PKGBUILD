# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gok
pkgver=2.23.91
pkgrel=1
pkgdesc="Gnome Onscreen Keyboard"
arch=(i686 x86_64)
license=('GPL')
url="http://www.gnome.org"
depends=('gnome-speech>=0.4.21' 'libgnomeui>=2.23.90' 'at-spi>=1.23.6' 'libwnck>=2.23.6')
makedepends=('perlxml' 'pkgconfig' 'gnome-doc-utils>=0.12.2')
options=('!emptydirs')
groups=('gnome-extra')
install=gok.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.23/${pkgname}-${pkgver}.tar.bz2)
md5sums=('b67f4df192bb41965ce0bc6413064512')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR=$startdir/pkg install || return 1

  install -m755 -d ${startdir}/pkg/usr/share/gconf/schemas
  gconf-merge-schema ${startdir}/pkg/usr/share/gconf/schemas/${pkgname}.schemas ${startdir}/pkg/etc/gconf/schemas/*.schemas || return 1
  rm -f ${startdir}/pkg/etc/gconf/schemas/*.schemas
}
