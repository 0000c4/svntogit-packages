post_install() {
  cat << EOF
Plotting support:
==> If you want to have plotting support:
==> 'pacman -S gnuplot'.

Exchange rates support:
==> For retrieval of exchange rates (not needed if you use one of the GUI):
==> 'pacman -S wget'
==>        OR
==> 'pacman -S gnome-vfs'.
EOF
}

post_upgrade() {
  post_install $1
}
