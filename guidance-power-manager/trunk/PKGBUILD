# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=guidance-power-manager
pkgver=4.1.3
pkgrel=1
pkgdesc="A frontend to HAL's power features for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
groups=('kde-extragear')
depends=('kdebase-runtime' 'python' 'dbus-python' 'hal' 'kdebindings' 'pyqt' 'libxrandr' 'libxxf86vm' 'libxss')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("http://download.kde.org/stable/${pkgver}/src/extragear/${pkgname}-${pkgver}.tar.bz2")
md5sums=('94dd6abf2826e134d54e9150c6ffe9c9')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
