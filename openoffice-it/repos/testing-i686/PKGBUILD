# Contributor: Sarah Hay <sarah@archlinux.org>

pkgname=openoffice-it
pkgver=2.4.1
pkgrel=1
pkgdesc="OpenOffice italian language files"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.openoffice.org"
makedepends=('rpmextract')
depends=('openoffice-base')
source=(ftp://ftp-1.gwdg.de/pub/openoffice/extended/2.4.1rc2/OOo_2.4.1rc2_20080529_LinuxIntel_langpack_it.tar.gz)
md5sums=('9c745a3b4603fe91d1dc0e6c23090c62')

build() {
  cd $startdir/src/OOH680_m17_native_packed-1_it.9310/RPMS
  for i in *.rpm
    do rpmextract.sh $i
  done
  # install openoffice language files
  cd $startdir/src/OOH680_m17_native_packed-1_it.9310/RPMS/opt
  mkdir -p $startdir/pkg/opt
  mv openoffice.org2.4 $startdir/pkg/opt/openoffice
  chown root -R $startdir/pkg/opt/openoffice
  chgrp root -R $startdir/pkg/opt/openoffice
}
