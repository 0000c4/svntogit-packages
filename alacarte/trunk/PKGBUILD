# Contributor: pressh <pressh@gmail.com>

pkgname=alacarte
pkgver=0.11.8
pkgrel=1
pkgdesc="Menu editor for gnome"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.realistanew.com/projects/alacarte/"
depends=('gnome-menus>=2.24.2' 'gnome-python>=2.22.3')
makedepends=('pkgconfig' 'intltool')
install=alacarte.install
options=('!libtool')
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/0.11/${pkgname}-${pkgver}.tar.bz2)
md5sums=('de8eb3ce7b8a078486c15a8a992137ad')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var || return 1
  make || return 1 
  make DESTDIR="${pkgdir}" install || return 1
}
