# $Id: $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=xorg-xedit
pkgver=1.1.2
pkgrel=1
pkgdesc="Simple text editor for X"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libxaw' 'libxmu' 'libxt' 'libx11')
makedepends=('xorg-util-macros')
source=(http://xorg.freedesktop.org/archive/individual/app/xedit-${pkgver}.tar.bz2
        git-fixes.patch)
sha1sums=('e2d9f49dd7e82959e0678c2417256cd59b06772f'
          '5c689a6cba97470a266512f7692cd56bd431b66d')

build() {
  cd "${srcdir}/xedit-${pkgver}"
  patch -Np1 -i "${srcdir}/git-fixes.patch"
  autoreconf
  ./configure --prefix=/usr
  make
  make DESTDIR="${pkgdir}" install
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
