# Contributor: Pierre Schmitz <pierre@archlinux.de>

pkgname=kdewebdev-kommander
pkgver=16.12.2
pkgrel=1
arch=(i686 x86_64)
pkgdesc="Executor for Kommander dialogs"
url='https://www.kde.org'
license=(GPL LGPL FDL)
groups=(kde-applications kdewebdev)
depends=(kdebase-runtime)
makedepends=(cmake automoc4)
source=("https://download.kde.org/stable/applications/${pkgver}/src/kommander-$pkgver.tar.xz"{,.sig})
sha1sums=('c759010d082218733d63abd97923fe8f3c740862'
          'SKIP')
validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7) # Albert Astals Cid <aacid@kde.org>

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../kommander-${pkgver} \
  	-DCMAKE_BUILD_TYPE=Release \
  	-DKDE4_BUILD_TESTS=OFF \
	-DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
