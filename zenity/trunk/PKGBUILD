# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=zenity
pkgver=2.31.92
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=(i686 x86_64)
license=('LGPL')
depends=('libnotify>=0.4.5')
makedepends=('intltool' 'gnome-doc-utils>=0.20.1' 'pkgconfig')
groups=('gnome-extra')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.31/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('5345f0780962747a0c024c8d8dfb297a087287a77f79727b6043f37a60ca23df')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeepe
  make
  make DESTDIR="${pkgdir}" install
}
