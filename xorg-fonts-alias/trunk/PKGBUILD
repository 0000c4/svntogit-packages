# $Id$
#Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=xorg-fonts-alias
pkgver=1.0.1
pkgrel=1
pkgdesc="X.org font alias files"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
source=(${url}/releases/individual/font/font-alias-${pkgver}.tar.bz2)
md5sums=('c4776b6f0f2ecdb7670b6fe64b5d2a2d')

build() {
  cd ${startdir}/src/font-alias-${pkgver}
  ./configure --prefix=/usr --with-top-fontdir=/usr/share/fonts || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
