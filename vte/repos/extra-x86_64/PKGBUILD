# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=vte
pkgver=0.20.3
pkgrel=1
pkgdesc="Virtual Terminal Emulator library"
arch=(i686 x86_64)
license=('LGPL')
depends=('gtk2>=2.16.2')
options=('!libtool')
makedepends=('pygtk>=2.14.1' 'pkgconfig' 'intltool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/GNOME/sources/vte/0.20/vte-${pkgver}.tar.bz2)
md5sums=('697ccae3f28196e6c72a1d3232669f30')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --libexecdir=/usr/lib/vte \
              --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
