# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=vte
pkgver=0.21.5
pkgrel=1
pkgdesc="Virtual Terminal Emulator library"
arch=(i686 x86_64)
license=('LGPL')
depends=('gtk2>=2.17.11')
options=('!libtool')
makedepends=('pygtk>=2.16.0' 'pkgconfig' 'intltool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/GNOME/sources/vte/0.21/vte-${pkgver}.tar.bz2)
sha256sums=('0044b7226e06752f8eefe61dce5cd84e7915bf1756b200c198eff8b7c379e2f6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --libexecdir=/usr/lib/vte \
      --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
