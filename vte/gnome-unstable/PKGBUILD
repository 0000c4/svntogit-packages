# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=vte
pkgver=0.21.7
pkgrel=1
pkgdesc="Virtual Terminal Emulator library"
arch=(i686 x86_64)
license=('LGPL')
depends=('gtk2>=2.17.11')
options=('!libtool')
makedepends=('pygtk>=2.16.0' 'pkgconfig' 'intltool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/GNOME/sources/vte/0.21/vte-${pkgver}.tar.bz2)
sha256sums=('91c3381d466a47435a6f50ac29cd1ab9f6377a03685e95610e906bf7cdb285b5')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --libexecdir=/usr/lib/vte \
      --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
