# $Id$
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-pl
pkgver=2.0.2
pkgrel=1
pkgdesc="Polish KOffice translation."
license=('GPL')
arch=('any')
url="http://www.koffice.org"
makedepends=('cmake' 'pkgconfig' 'automoc4' 'kdelibs')
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
md5sums=('fbbbec959008c20351bb275a189fa7fb')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
