# $Id$
# Maintainer:

pkgname=perl-crypt-passwdmd5
pkgver=1.3
pkgrel=5
pkgdesc="Provides a crypt()-compatible interface to new MD5-based crypt()"
arch=('any')
license=('GPL' 'PerlArtistic')
url="http://search.cpan.org/dist/${_realname}/"
depends=('perl')
provides=('perl-passwd-md5')
replaces=('perl-passwd-md5')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/L/LU/LUISMUNOZ/Crypt-PasswdMD5-$pkgver.tar.gz)
md5sums=('368205b1be8c0d4f807afe25d6fbd1ad')

build() {
  cd Crypt-PasswdMD5-$pkgver
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd Crypt-PasswdMD5-$pkgver
  make test
}

package() {
  cd Crypt-PasswdMD5-$pkgver
  make DESTDIR="${pkgdir}" install
}
