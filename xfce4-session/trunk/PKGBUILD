# Maintainer: Tobias Kieslich <tobias funnychar archlinux.org>

pkgname=xfce4-session
pkgver=4.5.99.1
pkgrel=1
pkgdesc="A session manager for Xfce"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4')
depends=("libxfcegui4>=$pkgver" 'libwnck' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'perlxml' 'xorg-server-utils')
replaces=('xfce4-toys')
options=('!libtool')
install=${pkgname}.install
source=(http://www.xfce.org/archive/xfce-${pkgver}/src/${pkgname}-${pkgver}.tar.bz2)
md5sums=('780336c10d8d42d5a79221b5fabe3f20')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static \
    --enable-legacy-sm --disable-gnome --enable-session-screenshots \
    --with-shutdown-style=auto || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
