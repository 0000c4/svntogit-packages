# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-en_gb
pkgver=4.1.0
pkgrel=1
pkgdesc="British English Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
replaces=('kde-i18n-en_gb')
provides=('kde-i18n-en_gb')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("ftp://ftp.archlinux.org/other/kde/l10n/kde-l10n-en_GB-${pkgver}.tar.bz2")
md5sums=('c8cb7ef97089dab92a0a569bd58135d7')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../kde-l10n-en_GB-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
