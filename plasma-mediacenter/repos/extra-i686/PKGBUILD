pkgname=plasma-mediacenter
pkgver=5.7.3
pkgrel=2
pkgdesc="A mediacenter user interface based on KDE Plasma components"
arch=(i686 x86_64)
url="http://community.kde.org/Plasma/Plasma_Media_Center/"
license=(GPL3)
depends=(plasma-workspace baloo)
makedepends=(extra-cmake-modules python)
source=("http://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"{,.sig})
sha256sums=('59aa14f24f213e720e5bcc6f861e3f553c28f6c21290a95fda2e0b4fc28db75c'
            'SKIP')
validpgpkeys=('13C16D03EDE728514473AA73A506E6D4DD4D5088'  # Jonathan Riddell
              '348C8651206633FD983A8FC4DEACEA00075E1D76'  # KDE Neon
              'D07BD8662C56CB291B316EB2F5675605C74E02CF') # David Edmundson

prepare() {
  mkdir -p build
}    

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DCMAKE_BUILD_TYPE=Release \
    -DBUILD_TESTING=OFF
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
