# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-zh_cn
pkgver=4.1.0
pkgrel=1
pkgdesc="Chinese Simplified Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
replaces=('kde-i18n-zh_cn')
provides=('kde-i18n-zh_cn')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("ftp://ftp.archlinux.org/other/kde/l10n/kde-l10n-zh_CN-${pkgver}.tar.bz2")
md5sums=('2fa7d8bb2f2773b4517a0915f4874053')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../kde-l10n-zh_CN-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
