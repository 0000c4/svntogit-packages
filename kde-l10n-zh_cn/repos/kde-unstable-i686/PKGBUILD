# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-zh_cn
pkgver=4.1.85
pkgrel=1
pkgdesc="Chinese Simplified Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
groups=('kde-l10n')
replaces=('kde-i18n-zh_cn')
provides=('kde-i18n-zh_cn')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdelibs')
options=('docs')
source=("http://download.kde.org/unstable/${pkgver}/src/kde-l10n/kde-l10n-zh_CN-${pkgver}.tar.bz2")
md5sums=('e5cc5c82937c3323155408820aac7222')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../kde-l10n-zh_CN-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
