pkgname=gnome-network-manager
pkgver=0.7.0rc2
pkgrel=1
pkgdesc="GNOME frontends to NetWorkmanager"
arch=(i686 x86_64)
license=('GPL')
url="http://www.gnome.org/projects/NetworkManager/"
makedepends=('pkgconfig' 'perlxml')
depends=('networkmanager>=0.7.0rc1' 'libglade>=2.6.3' 'gnome-keyring>=2.24.0' 'policykit-gnome' 'notification-daemon' 'libnotify')
install=gnome-network-manager.install
source=(http://ftp.gnome.org/pub/GNOME/sources/network-manager-applet/0.7/network-manager-applet-0.7.0-rc2.tar.bz2)
md5sums=('8d0e9267fafcc902ca66577f7b4982cb')

build() {
  cd "${srcdir}/nm-applet-0.7.0"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
