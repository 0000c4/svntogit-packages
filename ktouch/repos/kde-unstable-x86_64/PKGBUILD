pkgname=ktouch
pkgver=19.11.90
pkgrel=1
pkgdesc="Touch Typing Tutor"
url="https://kde.org/applications/education/ktouch/"
arch=(x86_64)
license=(GPL LGPL FDL)
groups=(kde-applications kdeedu)
depends=(kqtquickcharts libxkbfile kcmutils hicolor-icon-theme qt5-quickcontrols2 qt5-graphicaleffects qt5-xmlpatterns)
makedepends=(extra-cmake-modules kdoctools)
source=("https://download.kde.org/unstable/applications/$pkgver/src/$pkgname-$pkgver.tar.xz"{,.sig})
sha256sums=('b217bd0a1872a75d10d3a5c1a5bf4429102bbc5acf960ba373ede552775ba15f'
            'SKIP')
validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87) # Christoph Feck <cfeck@kde.org>

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
