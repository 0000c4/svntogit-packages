# $Id$
#  ppc Maintainer: Alexander Baldeck <alexander@archlinux.org>
# i686 Maintainer: Jan de Groot <jgc@archlinux.org>
pkgname=xterm
pkgver=241
pkgrel=1
pkgdesc="X Terminal Emulator"
arch=(i686 x86_64)
url="http://invisible-island.net/xterm/"
depends=('libxft' 'libxaw>=1.0.5' 'ncurses' 'xorg-apps')
groups=('xorg')
source=(ftp://invisible-island.net/${pkgname}/${pkgname}-${pkgver}.tgz)
md5sums=('dd085a856bb5ad3bcd25f563396e7b9c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
              --libdir=/etc \
              --mandir=/usr/share/man \
	      --with-app-defaults=/usr/share/X11/app-defaults/ \
              --with-x \
	      --disable-full-tgetent \
	      --disable-imake \
	      --enable-ansi-color \
	      --enable-88-color \
	      --enable-256-color \
	      --enable-broken-osc \
	      --enable-broken-st \
	      --enable-load-vt-fonts \
	      --enable-i18n \
	      --enable-wide-chars \
	      --enable-doublechars \
	      --enable-warnings \
	      --enable-tcap-query \
	      --enable-logging \
	      --enable-dabbrev \
	      --enable-freetype \
	      --enable-luit \
	      --enable-mini-luit \
	      --enable-narrowproto || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
  chmod 0755 "${pkgdir}/usr/bin/xterm" || return 1
}
