# $Id$
# Maintainer: damir <damir@archlinux.org>
# Contributor: Ben <ben@benmazer.net>

pkgname=ne
pkgver=1.43
pkgrel=1
pkgdesc="the nice editor"
arch=('i686' 'x86_64')
url="http://ne.dsi.unimi.it"
license=('GPL')
depends=('glibc' 'ncurses' 'texinfo')
install=ne.install
source=(http://ne.dsi.unimi.it/${pkgname}-${pkgver}.tar.gz)
md5sums=('bbc65c4981b29a6f2cb0652aa3d5976a')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}/src
  make || return 1
  install -D -m755 ne ${pkgdir}/usr/bin/ne
  install -D -m644 ../doc/ne.1 ${pkgdir}/usr/share/man/man1/ne.1
  install -D -m644 ../doc/ne.info.gz ${pkgdir}/usr/share/info/ne.info.gz
  install -D -m644 ../doc/default.keys ${pkgdir}/usr/share/doc/${pkgname}/default.keys
  install -D -m644 ../doc/default.menus ${pkgdir}/usr/share/doc/${pkgname}/default.menus
}

