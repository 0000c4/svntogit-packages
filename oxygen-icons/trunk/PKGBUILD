# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgbase=oxygen-icons
pkgname=('oxygen-icons'
         'oxygen-icons-svg')
pkgver=4.3.2
pkgrel=1
pkgdesc="The Oxygen Icon Theme"
arch=('any')
url='http://www.oxygen-icons.org/'
license=('LGPL')
makedepends=('pkgconfig' 'cmake' 'automoc4')
source=("http://download.kde.org/stable/${pkgver}/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('6f5b700a65720f44d895a10049bbc05c')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
}

package_oxygen-icons() {
	cd $srcdir/build
	make DESTDIR=$pkgdir install
	# FIXME
	# remove files provided by kdepim-kmail
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/actions/mail-forwarded-replied.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/actions/mail-forwarded.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/actions/mail-reply-custom.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/actions/mail-signed-fully.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/actions/mail-signed-part.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/actions/mail-signed.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/status/mail-sent.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/status/mail-tagged.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/16x16/status/mail-task.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/22x22/actions/mail-reply-custom.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/22x22/status/mail-task.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/32x32/actions/mail-reply-custom.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/32x32/status/mail-tagged.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/48x48/actions/mail-reply-custom.png
	rm -f ${pkgdir}/usr/share/icons/oxygen/48x48/status/mail-tagged.png
}

package_oxygen-icons-svg() {
	pkgdesc="The Oxygen Icon Theme (Scalable Vector Graphics)"
	cd $srcdir/${pkgname}-${pkgver}
	find scalable -type f ! -name '*.sh' -exec \
		install -D -m644 "{}" "${pkgdir}/usr/share/icons/oxygen/{}" \;
	# FIXME
	# remove files provided by kdepim-kmail
	rm -f ${pkgdir}/usr/share/icons/oxygen/scalable/status/mail-tagged.svgz
	rm -f ${pkgdir}/usr/share/icons/oxygen/scalable/status/mail-task.svgz
}
