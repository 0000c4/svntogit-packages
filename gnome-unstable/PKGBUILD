# $Id: PKGBUILD 5595 2008-07-18 21:58:26Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pangomm
pkgver=2.25.1.3
pkgrel=1
pkgdesc="C++ bindings for pango"
arch=(i686 x86_64)
license=('LGPL')
depends=('pango>=1.25.5' 'glibmm>=2.21.4.2' 'cairomm>=1.8.2')
makedepends=('pkgconfig')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.25/${pkgname}-${pkgver}.tar.bz2)
conflicts=('gtkmm<2.13.0')
options=('!libtool')
url="http://gtkmm.sourceforge.net/"
sha256sums=('47eb72b1798ff0abeda4184081b61faa7be37a508328232fbb0b02c8864b65a0')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
