# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: pressh <pressh@gmail.com>

pkgname=alacarte
pkgver=0.12.3
pkgrel=1
pkgdesc="Menu editor for gnome"
arch=(any)
license=('LGPL')
url="http://www.realistanew.com/projects/alacarte/"
depends=('gnome-menus>=2.27.92' 'gnome-python>=2.27.1' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool')
install=alacarte.install
options=('!libtool')
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/0.12/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('8979c893f40f7418ccf04bfd5ddcfe25a3359b32fdbe22ca57a091716cc575da')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var || return 1
  make || return 1 
  make DESTDIR="${pkgdir}" install || return 1
}
