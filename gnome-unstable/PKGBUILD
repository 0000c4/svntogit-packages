# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pygobject
pkgver=2.19.0
pkgrel=1
pkgdesc="Python bindings for GObject"
arch=(i686 x86_64)
license=('LGPL')
depends=('python>=2.6.1' 'glib2>=2.21.4')
source=(http://ftp.gnome.org/pub/gnome/sources/pygobject/2.19/${pkgname}-${pkgver}.tar.bz2)
options=('!libtool')
url="http://www.pygtk.org/"
sha256sums=('e4446e973b16157125cd17571522863a8e25b03de8b09ecd0380a1a184119d61')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
