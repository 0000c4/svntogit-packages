# $Id$
# Maintainer:  Jan de Groot <jan@archlinux.org>

pkgname=gnome-desktop
pkgver=2.27.92
pkgrel=1
pkgdesc="The GNOME Desktop"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gconf>=2.27.0' 'startup-notification>=0.10')
makedepends=('gnome-doc-utils>=0.17.5' 'pkgconfig' 'intltool')
optdepends=('gnome-python: gnome-about')
url="http://www.gnome.org"
groups=('gnome')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.27/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('68742eb109d58739313337e42f20db9dcfec9588238a07ec927af05f7c204e91')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --with-gnome-distributor="Archlinux" \
      --disable-scrollkeeper || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
