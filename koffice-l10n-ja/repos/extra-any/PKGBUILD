# $Id$
# Maintainer: Ronald van Haren <ronald.archlinux.org>

pkgname=koffice-l10n-ja
pkgver=2.0.2
pkgrel=1
pkgdesc="Japanese KOffice translation."
license=('GPL')
arch=('any')
url="http://www.koffice.org"
source=(http://download.kde.org/stable/koffice-$pkgver/src/koffice-l10n/$pkgname-$pkgver.tar.bz2)
makedepends=('cmake' 'pkgconfig' 'automoc4' 'kdelibs')
md5sums=('ea06ec04e371183d55463e0697a4883f')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../${pkgname}-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
