# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-lv
pkgver=4.1.0
pkgrel=1
pkgdesc="Latvian Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
replaces=('kde-i18n-lv')
provides=('kde-i18n-lv')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("ftp://ftp.archlinux.org/other/kde/l10n/${pkgname}-${pkgver}.tar.bz2")
md5sums=('77a7eed923a88f37a1b61de3d1edb1fb')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}