# arg 1:  the new package version
post_install() {
    echo "==> Run 'hwd -u' to update xorgtable, pci-, and usb.ids."
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
    echo "==> Run 'hwd -u' to update xorgtable, pci-, and usb.ids."
}

# arg 1:  the old package version
pre_remove() {
    rm -R /etc/hwd >/dev/null 2>&1
}
