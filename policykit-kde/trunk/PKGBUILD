# $Id$
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=policykit-kde
pkgver=0.9.2
pkgrel=1
pkgdesc='A manager and an authorization manager for PolicyKit using kdelibs'
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
depends=('polkit-qt' 'kdelibs' 'kdebase-runtime')
makedepends=('cmake')
options=('force')
source=("http://download.kde.org/stable/apps/KDE4.x/admin/PolicyKit-kde-${pkgver}.tar.bz2")
md5sums=('58df658e6c56c7e50f61c0368eb719e1')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../PolicyKit-kde-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
