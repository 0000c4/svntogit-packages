# $Id$
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=policykit-kde
pkgver=4.2.0
pkgrel=1
pkgdesc="PolicyKit integration for the KDE desktop"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
depends=('policykit' 'kdelibs' 'kdebase-runtime')
options=('docs')
source=("http://download.kde.org/stable/${pkgver}/src/extragear/PolicyKit-kde-${pkgver}.tar.bz2")
md5sums=('e3bc0669e5a61549d12a66af31dd81b6')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../PolicyKit-kde-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
