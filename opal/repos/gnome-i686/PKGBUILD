# $Id$
# Maintainer: Jan de Groot <jan@archlinux.org>
# Contributor: Tom K <tomk@runbox.com>
pkgname=opal
pkgver=3.3.1
pkgrel=1
pkgdesc="Open Phone Abstraction Library"
arch=(i686 x86_64)
license=('GPL')
depends=('ptlib>=2.3.1' 'libtheora' 'x264>=20080625')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.3/${pkgname}-${pkgver}.tar.bz2)
url="http://www.ekiga.org"
md5sums=('6e7525b440c9fb2d68b8767996ab4a76')

build() {
  cd ${startdir}/src/opal-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --enable-localspeex || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
