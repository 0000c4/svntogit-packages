# Maintainer: Alexander Baldeck <alexander@archlinux.org>

pkgname=koffice-l10n-en_gb
pkgver=1.9.99.0
pkgrel=1
pkgdesc="British KOffice translation."
license=('GPL')
arch=('i686' 'x86_64')
url="http://www.koffice.org"
depends=("koffice>=${pkgver}")
source=(http://download.kde.org/unstable/koffice-$pkgver/src/koffice-l10n/koffice-l10n-en_GB-$pkgver.tar.bz2)
md5sums=('0d0de1e340c7673bc04002db6612e734')

build() {
  cd ${srcdir}
  install -d build
  cd build
  cmake ../koffice-l10n-en_GB-${pkgver} \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}

