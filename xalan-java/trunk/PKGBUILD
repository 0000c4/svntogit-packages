pkgname=xalan-java
pkgver=2.7.1
pkgrel=1
pkgdesc="Xalan-Java is an XSLT processor for transforming XML documents into HTML, text, or other XML document types."
arch=('i686' 'x86_64')
license=('APACHE')
url="http://xml.apache.org/xalan-j"
depends=('java-runtime' 'java-xerces2')
source=(http://www.apache.org/dist/xml/xalan-j/xalan-j_${pkgver//./_}-bin-2jars.tar.gz)
md5sums=('3ccda39bcd08b780436dfd2f22fb23d5')

build() {
  mkdir -p ${startdir}/pkg/usr/share/java
  install -m644 ${startdir}/src/xalan-j_${pkgver//./_}/*.jar ${startdir}/pkg/usr/share/java/
}
