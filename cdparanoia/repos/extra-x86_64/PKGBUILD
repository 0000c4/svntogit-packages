# $Id$
# Maintainer: Alexander Fehr <pizzapunk gmail com>

pkgname=cdparanoia
pkgver=10.0
pkgrel=1
pkgdesc="Compact Disc Digital Audio extraction tool"
arch=('i686' 'x86_64')
url="http://xiph.org/paranoia/"
license=('GPL3')
depends=('glibc')
options=(!makeflags)
source=(http://downloads.xiph.org/releases/cdparanoia/cdparanoia-III-$pkgver.src.tgz)
md5sums=('03a1aba5cf45ce7b83389d442a275acf')

build() {
  cd "$srcdir/cdparanoia-III-$pkgver"
  ./configure --prefix=/usr || return 1

  sed -i 's|${prefix}/man|${prefix}/share/man|' Makefile

  make || return 1
  make prefix="$pkgdir/usr" install || return 1
}
