# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-pt_br
pkgver=4.2.98
pkgrel=1
pkgdesc="Brazilian Portuguese Localization for KDE"
arch=('any')
url='http://www.kde.org'
license=('GPL')
groups=('kde-l10n')
replaces=('kde-i18n-pt_br')
provides=('kde-i18n-pt_br')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdelibs')
options=('docs')
source=("http://download.kde.org/unstable/${pkgver}/src/kde-l10n/kde-l10n-pt_BR-${pkgver}.tar.bz2")
md5sums=('8a8e65cc99ba4ac5f19bcd2bd67de200')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../kde-l10n-pt_BR-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
