# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-pt_br
pkgver=4.1.0
pkgrel=1
pkgdesc="Brazilian Portuguese Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
replaces=('kde-i18n-pt_br')
provides=('kde-i18n-pt_br')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("ftp://ftp.archlinux.org/other/kde/l10n/kde-l10n-pt_BR-${pkgver}.tar.bz2")
md5sums=('853e5c5745ae9d5335cc29e49e26ee81')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../kde-l10n-pt_BR-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
