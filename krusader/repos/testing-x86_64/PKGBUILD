# Contributor: Lucien Immink <l.immink@student.fnt.hvu.nl>

# NOTE: pacman -Rd kdebindings before compilation.

pkgname=krusader
pkgver=1.90.0
pkgrel=1
pkgdesc="Alternative file manager for KDE resembling Midnight Commander"
arch=(i686 x86_64)
depends=(kdelibs3)
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz)
url="http://krusader.sourceforge.net/"
md5sums=('0bcf8f4d03484dae0390ffafa953ac40')

build() {
  [ -z "${QTDIR}" ] && . /etc/profile.d/qt3.sh
  [ -z "${KDEDIR}" ] && . /etc/profile.d/kde3.sh
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/opt/kde --without-arts
  make || return 1
  make DESTDIR=${startdir}/pkg install
}
