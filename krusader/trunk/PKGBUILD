# Contributor: Lucien Immink <l.immink@student.fnt.hvu.nl>

pkgname=krusader
pkgver=2.0.0beta2
_pkgver=2.0.0-beta2
pkgrel=1
pkgdesc="Alternative file manager for KDE resembling Midnight Commander"
url="http://krusader.sourceforge.net/"
arch=('i686' 'x86_64')
license=('GPL')
depends=('kdelibs')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}-${_pkgver}.tar.gz
	'fix_qt5.patch')
md5sums=('88805a863dc51bf723a6307173f7f044'
	'5a261142f280d0c4f59c61ccf51a653f')

build() {
  cd ${srcdir}
  patch -Np0 -i ${srcdir}/fix_qt5.patch || return 1
  mkdir build
  cd build
  cmake ../${pkgname}-${_pkgver} \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install
}
