# $Id$
# Maintainer: Ionut Biru <ibiru@archlinux.org>

pkgname=gnome-user-docs
pkgver=2.91.92
pkgrel=1
pkgdesc="User documentation for GNOME3"
arch=(any)
license=('FDL')
depends=('yelp')
makedepends=('gnome-doc-utils')
replaces=('gnome2-user-docs')
conflicts=('gnome2-user-docs')
url="http://www.gnome.org"
groups=('gnome')
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-user-docs/2.91/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('cdb4e56ab346ced076b2ebc5a56c1334f6c1cebbff452a63be201b76a33091cc')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeeper
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
