pkgname=libwebkit
#_svnver=41521 # date: 20090309
#pkgver=1.1.1_svn$_svnver # see configure.ac for .so libversion
pkgver=1.1.4
pkgrel=1
pkgdesc="an opensource web content engine, derived from KHTML and KJS from KDE"
arch=('i686' 'x86_64')
url="http://webkitgtk.org/"
license=('custom')
depends=('libxt' 'libxslt' 'sqlite3' 'gtk2' 'icu>=4.0' 'gstreamer0.10-base' 'libsoup>=2.25.91')
makedepends=('gperf')
provides=('webkitgtk-svn')
conflicts=('webkitgtk-svn')
replaces=('webgitgtk-svn')
source=(#http://builds.nightly.webkit.org/files/trunk/src/WebKit-r${_svnver}.tar.bz2
	http://webkitgtk.org/webkit-${pkgver}.tar.gz)
options=('!libtool')
md5sums=('2c941eb9ad9e791fba9b57bf252e3f04')

build() {
#  cd ${srcdir}/WebKit-r${_svnver}
  cd ${srcdir}/webkit-${pkgver}
#  ./autogen.sh --prefix=/usr \
  ./configure --prefix=/usr \
	--enable-video \
	--with-font-backend=freetype \
	--with-http-backend=soup \
	--enable-jit # not yet supported on x86_64
  make || return 1
  make DESTDIR="$pkgdir" install || return 1

  # install license
#  install -Dm644 ${srcdir}/WebKit-r${_svnver}/WebKit/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
  install -Dm644 ${srcdir}/webkit-${pkgver}/WebKit/LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}

