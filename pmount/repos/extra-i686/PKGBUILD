pkgname=pmount
pkgver=0.9.17
pkgrel=1
pkgdesc="mount removable devices as normal user"
arch=(i686 x86_64)
license=('GPL2')
url="http://pmount.alioth.debian.org/"
depends=('sysfsutils>=2.0.0-1' 'bash' 'hal>=0.5.8.1-2')
makedepends=('perlxml')
source=(http://alioth.debian.org/frs/download.php/2247/${pkgname}-${pkgver}.tar.gz
	pmount-dbus-close.patch)
backup=('etc/pmount.allow')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -Np1 -i ${srcdir}/pmount-dbus-close.patch || return 1
  ./configure --prefix=/usr --with-cryptsetup-prog=/usr/sbin/cryptsetup
  make || return 1 
  make DESTDIR=${pkgdir} install 
}
md5sums=('24a676bf495bec367b2d971cdca1c54c'
         'b7ea1afd82ffebf510dc89f74cd39f09')
