# Contributor: damir <damir@archlinux.org>

pkgname=kmplayer
pkgver=0.11.1
pkgrel=1
pkgdesc="Video player plugin for Konqueror and basic MPlayer/Xine/ffmpeg/ffserver/VDR frontend for KDE"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL')
url="http://kmplayer.kde.org"
depends=('kdelibs' 'gtk2')
makedepends=('pkgconfig' 'cmake' 'automoc4')
source=("http://kmplayer.kde.org/pkgs/$pkgname-$pkgver.tar.bz2")
md5sums=('c584e88b0ff17987512d7a15799d6fbb')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make || return 1
  make DESTDIR=${pkgdir} install

  # icons are included in kdebase-runtime
  rm -rf ${pkgdir}/usr/share/icons/oxygen/

  mv ${pkgdir}/usr/share/doc/kde/html/en/doc ${pkgdir}/usr/share/doc/kde/html/en/${pkgname}
}
