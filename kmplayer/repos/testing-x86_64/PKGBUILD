# $Id$
# Maintainer: damir <damir@archlinux.org>

pkgname=kmplayer
pkgver=0.11.0
_origver=0.11.0-rc4
pkgrel=1
pkgdesc="Video player plugin for Konqueror and basic MPlayer/Xine/ffmpeg/ffserver/VDR frontend for KDE"
arch=("i686" "x86_64")
license=('GPL' 'LGPL' 'FDL')
url="http://kmplayer.kde.org"
depends=('kdelibs>=4.1' 'gtk2')
makedepends=('pkgconfig' 'cmake' 'automoc4')
source=("http://kmplayer.kde.org/pkgs/kmplayer-${_origver}.tar.bz2")
md5sums=('ec9267dd78db1b6148c103c6a38116a3')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${_origver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}