# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=libetebase
pkgver=0.4.0
pkgrel=1
pkgdesc="Etebase C library"
arch=(x86_64)
url="https://github.com/etesync/libetebase"
license=(BSD)
depends=(openssl)
makedepends=(cargo)
source=($pkgname-$pkgver.tar.gz::"https://github.com/etesync/libetebase/archive/v$pkgver.tar.gz")
sha256sums=('7c10b2ecd586dcc59593b75b7595e6bb45d0484a87508370d9fe668f3a795ff0')

build() {
  cd $pkgname-$pkgver
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install

  install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname
}
