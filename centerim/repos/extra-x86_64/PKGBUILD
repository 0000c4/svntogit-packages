# Contributor: shild <sxp@bk.ru>

pkgname=centerim
pkgver=4.22.8
pkgrel=1
pkgdesc="Fork of CenterICQ - A text mode menu- and window-driven IM interface"
arch=('i686' 'x86_64')
url="http://www.centerim.org"
license=('GPL')
depends=('python' 'libjpeg>=7' 'gpgme')
replaces=('centericq')
source=(http://www.centerim.org/download/releases/$pkgname-$pkgver.tar.gz)
md5sums=('24f3d0f7c064f429879bc1626273b59b')
sha1sums=('3fce70fe1b9fe14a30b57ffb03d2640d95d61f95')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr \
              --with-ssl \
              --with-openssl \
              --enable-locales-fix || return 1

  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
