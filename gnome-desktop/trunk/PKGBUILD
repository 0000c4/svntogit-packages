# $Id$
# Maintainer:  Jan de Groot <jan@archlinux.org>

pkgname=gnome-desktop
pkgver=2.28.2
pkgrel=1
pkgdesc="The GNOME Desktop"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gconf>=2.28.0' 'startup-notification>=0.10')
makedepends=('gnome-doc-utils>=0.18.0' 'pkgconfig' 'intltool')
optdepends=('pygtk: gnome-about')
url="http://www.gnome.org"
groups=('gnome')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.28/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('0d1d51d8aa04d148bfa673496061a675473fac3a9d21d2046fd93b05475dec11')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static \
      --with-gnome-distributor="Archlinux" \
      --disable-scrollkeeper || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
