pkgname=acpi
pkgver=0.09
pkgrel=2
pkgdesc="a Linux ACPI client providing battery, AC power, and thermal readings"
arch=('i686' 'x86_64')
url="http://grahame.angrygoats.net/acpi.shtml"
depends=('glibc')
source=(http://grahame.angrygoats.net/source/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('a5a70595834b487c3a2f9278a3d60768')
license=('GPL2')

build() {
  cd $startdir/src/$pkgname-$pkgver
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=$startdir/pkg install
}
