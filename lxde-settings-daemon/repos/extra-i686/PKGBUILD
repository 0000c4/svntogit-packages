# Maintainer: Juergen Hoetzel <juergen@archlinux.org>
pkgname=lxde-settings-daemon
pkgver=0.4
pkgrel=1
pkgdesc="XSettings daemon of the LXDE Desktop"
arch=('i686' 'x86_64')
license=('GPL2')
groups=('lxde')
depends=('libx11' 'glib2')
url="http://lxde.org/"
source=(http://downloads.sourceforge.net/sourceforge/lxde/${pkgname}-${pkgver}.tar.bz2)
md5sums=('4f3f9bd318e13eaeb5b721f84ff67b17')

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --sysconfdir=/etc --prefix=/usr || return 1
	make || return 1
	make DESTDIR="$pkgdir" install || return 1
}

