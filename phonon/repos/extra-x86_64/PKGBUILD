# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=phonon
pkgver=4.3.0
pkgrel=2
pkgdesc='The multimedia API for KDE 4'
arch=('i686' 'x86_64')
url='http://phonon.kde.org'
license=('LGPL')
depends=('qt' 'xine-lib')
makedepends=('pkgconfig' 'cmake' 'automoc4')
source=("http://download.kde.org/stable/4.2.0/src/${pkgname}-${pkgver}.tar.bz2")
md5sums=('f851219ec1fb4eadc7904f053b6b498d')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_GStreamer=OFF
	make
	make DESTDIR=$pkgdir install
}
