# $Id: $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-disk-utility
pkgver=0.4
pkgrel=1
pkgdesc="GNOME libraries and applications for dealing with storage devices"
arch=(i686 x86_64)
license=('GPL')
depends=('glib2>=2.21.4' 'dbus-glib>=0.80' 'gnome-keyring>=2.27.90' 'gtk2>=2.17.6' 'libunique>=1.0.8' 'devicekit-disks>=005')
makedepends=()
options=('!libtool' '!emptydirs')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgver}/${pkgname}-${pkgver}.tar.bz2
        drop-polkit.patch)
sha1sums=('7f8590420a8b415b4ea8b88ebea503f5d1fbab93'
          '456a5b92b826f6d79761c862a1c237e0b97438b7')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  patch -Np1 -i "${srcdir}/drop-polkit.patch" || return 1
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
      --disable-scrollkeeper || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
