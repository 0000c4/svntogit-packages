# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-ro
pkgver=4.1.85
pkgrel=1
pkgdesc="Romanian Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
groups=('kde-l10n')
replaces=('kde-i18n-ro')
provides=('kde-i18n-ro')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdelibs')
options=('docs')
source=("http://download.kde.org/unstable/${pkgver}/src/kde-l10n/${pkgname}-${pkgver}.tar.bz2")
md5sums=('440bd73ed289e5a9d4c5032455e2ac8f')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
