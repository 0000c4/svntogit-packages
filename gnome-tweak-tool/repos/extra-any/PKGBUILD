# $Id$
# Maintainer: Ionut Biru <ibiru@archlinux.org>
pkgname=gnome-tweak-tool
pkgver=3.0.4
pkgrel=1
pkgdesc="A tool to customize advanced GNOME 3 options."
arch=(any)
url="https://live.gnome.org/GnomeTweakTool"
license=('GPL')
depends=('gconf' 'gsettings-desktop-schemas' 'pygobject')
makedepends=('pygobject-devel' 'intltool')
source=(http://download.gnome.org/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2)
sha256sums=('dc05ce16d874016fd7830b390607c03d4fb8dcb7bd7c56daa2270234b82d5863')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
  sed -i "s|#!/usr/bin/env python|#!/usr/bin/env python2|" "$pkgdir"/usr/bin/gnome-tweak-tool
}

# vim:set ts=2 sw=2 et:
