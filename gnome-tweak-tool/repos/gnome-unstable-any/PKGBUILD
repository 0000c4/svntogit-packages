# $Id$
# Maintainer: Ionut Biru <ibiru@archlinux.org>
pkgname=gnome-tweak-tool
pkgver=2.91.93
pkgrel=1
pkgdesc="A tool to customize advanced GNOME 3 options."
arch=(any)
url="https://live.gnome.org/GnomeTweakTool"
license=('GPL')
depends=('gconf' 'gsettings-desktop-schemas' 'pygobject')
makedepends=('pygobject-devel')
source=(http://download.gnome.org/sources/$pkgname/2.91/$pkgname-$pkgver.tar.bz2)
sha256sums=('9b6acc5e2ef70e3cc201a07ce86e75f9c0cb39ed41590cfc0d0b8ffb7587958d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir" install
  sed -i "s|#!/usr/bin/env python|#!/usr/bin/env python2|" "$pkgdir"/usr/bin/gnome-tweak-tool
}

# vim:set ts=2 sw=2 et:
