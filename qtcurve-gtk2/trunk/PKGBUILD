# $Id: PKGBUILD,v 1.44 2008/07/14 00:57:46 Pierre Exp $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=qtcurve-gtk2
pkgver=0.69.0
pkgrel=1
arch=('i686' 'x86_64')
groups=('qtcurve')
license='GPL'
options=('!libtool')
pkgdesc='A configurable set of widget styles for KDE and Gtk'
source=("http://home.freeuk.com/cpdrummond/QtCurve-Gtk2-${pkgver}.tar.bz2")
url='http://www.kde-look.org/content/show.php?content=40492'
depends=('gtk2')
makedepends=('pkgconfig' 'cmake')
md5sums=('ce22fdf9b0e4e0352195f52a329c8848')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../QtCurve-Gtk2-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
