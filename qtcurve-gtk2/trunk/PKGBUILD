# $Id: PKGBUILD,v 1.44 2008/07/14 00:57:46 Pierre Exp $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=qtcurve-gtk2
pkgver=1.0.0
pkgrel=1
arch=('i686' 'x86_64')
groups=('qtcurve')
license='GPL'
pkgdesc='A configurable set of widget styles for KDE and Gtk'
url='http://www.kde-look.org/content/show.php?content=40492'
source=("http://craigd.wikispaces.com/file/view/QtCurve-Gtk2-${pkgver}.tar.bz2")
depends=('gtk2')
makedepends=('pkgconfig' 'cmake')
options=('!libtool')
md5sums=('cdbc25becfbee09cc3e5802aabe5b172')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../QtCurve-Gtk2-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
}

package() {
	cd $srcdir/build
	make DESTDIR=$pkgdir install
}
