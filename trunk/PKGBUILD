# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=akonadi
pkgver=1.1.0
pkgrel=1
pkgdesc="PIM layer, which provides an asynchronous API to access all kind of PIM data"
arch=('i686' 'x86_64')
url='http://www.akonadi-project.org'
license=('LGPL')
depends=('qt>=4.4' 'shared-mime-info' 'boost' 'mysql')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'libxslt')
install='akonadi.install'
source=("http://akonadi.omat.nl/${pkgname}-${pkgver}.tar.bz2")
md5sums=('de54155bdc4f15d30e889a6245779a2c')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
