# $Id$
# Maintainer: Tobias Powalowski <tpowa@archlinux.org>

pkgname=qca
pkgver=2.0.1
pkgrel=1
pkgdesc="Qt Cryptographic Architecture"
arch=('i686' 'x86_64')
url="http://delta.affinix.com/qca/"
license=('LGPL')
depends=('qt' 'ca-certificates')
makedepends=('cmake' 'pkgconfig' 'gnupg')
source=("http://delta.affinix.com/download/qca/2.0/${pkgname}-${pkgver}.tar.bz2")
options=(!libtool)
md5sums=('a0a87d0b3210e23f8c1713562282b7d6')

build() {
	cd $srcdir/${pkgname}-${pkgver}
	./configure --prefix=/usr --no-separate-debug-info --disable-tests
	make
	make INSTALL_ROOT=$pkgdir install
}