# $Id$

pkgname=perl-io-html
pkgver=1.00
pkgrel=2
pkgdesc="Open an HTML file with automatic charset detection"
arch=('any')
url='http://search.cpan.org/dist/IO-HTML'
depends=('perl')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
source=(http://search.cpan.org/CPAN/authors/id/C/CJ/CJM/IO-HTML-$pkgver.tar.gz)
sha1sums=('fdfa3fe3d61a7fda9236c8d9776cdd65')

build() {
  cd IO-HTML-IO-HTML-$pkgver
  perl Makefile.PL
  make PERL_MM_USE_DEFAULT=1 PERL_MM_OPT="INSTALLDIRS=vendor" PERL_MB_OPT="--installdirs vendor"
}

check() {
  cd IO-HTML-$pkgver
  make test
}

package() {
  cd IO-HTML-$pkgver
  make install
}
