# $Id: PKGBUILD 5595 2008-07-18 21:58:26Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=pangomm
pkgver=2.14.1
pkgrel=1
pkgdesc="C++ bindings for pango"
arch=(i686 x86_64)
license=('LGPL')
depends=('pango>=1.22.4' 'glibmm>=2.18.1' 'cairomm>=1.6.4')
makedepends=('pkgconfig')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.14/${pkgname}-${pkgver}.tar.bz2)
conflicts=('gtkmm<2.13.0')
options=('!libtool')
url="http://gtkmm.sourceforge.net/"
md5sums=('c67228ea93dd977394d2872b61754b53')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
