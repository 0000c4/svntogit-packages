# $Id$
# Maintainer: Tobias Powalowski <tpowa@archlinux.org>

pkgname=kipi-plugins
pkgver=0.2.0rc2
pkgrel=1
pkgdesc="libkipi plugins for digikam and kde apps"
arch=("i686" "x86_64")
license=('GPL')
url="http://www.kipi-plugins.org"
makedepends=('pkgconfig' 'cmake')
depends=('kdegraphics' 'kdepimlibs' 'opencv' 'libgpod>=0.7.0')
source=("http://dl.sourceforge.net/sourceforge/kipi/$pkgname-0.2.0-rc2.tar.bz2")
optdepends=('imagemagick: for picture manipulation')

build() {
  cd $startdir/src/$pkgname-0.2.0-rc2
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
  # fix compiling
  make
  sed -i -e 's|#include <phonon/Phonon::VolumeSlider>|#include <KDE/Phonon/VolumeSlider>|g' advancedslideshow/ui_playbackwidget.h || return 1
  make || return 1
  make DESTDIR=$startdir/pkg/ install
 }
md5sums=('e853a7929749e69f59e5c7bc9cdd8598')
