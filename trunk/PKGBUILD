# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=vte
pkgver=0.20.2
pkgrel=1
pkgdesc="Virtual Terminal Emulator library"
arch=(i686 x86_64)
license=('LGPL')
depends=('gtk2>=2.16.1')
options=('!libtool')
makedepends=('pygtk>=2.14.1' 'pkgconfig' 'intltool')
url="http://www.gnome.org"
source=(http://ftp.gnome.org/pub/GNOME/sources/vte/0.20/vte-${pkgver}.tar.bz2)
md5sums=('d38484da2974bb049de8831e294aa7d1')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --libexecdir=/usr/lib/vte \
              --localstatedir=/var --disable-static || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
