# $Id$
# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=perl-date-manip
pkgver=6.73
pkgrel=1
pkgdesc="Date::Manip - date manipulation routines"
arch=('any')
license=('PerlArtistic')
url="http://search.cpan.org/dist/Date-Manip/"
depends=('perl')
checkdepends=('perl-test-inter')
options=('!emptydirs')
source=("http://search.cpan.org/CPAN/authors/id/S/SB/SBECK/Date-Manip-${pkgver}.tar.gz")
sha512sums=('2bae6dcfcc9465023f29050817465dad683e22f49c278774aaf3e13fe46a46922e4b093bfa968aea62d755b3669c88d1a41ac3e549757be354d4cb61ad1c54b8')

build() {
  cd Date-Manip-${pkgver}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd Date-Manip-${pkgver}
  make test
}

package() {
  cd Date-Manip-${pkgver}
  make DESTDIR="${pkgdir}" install
}
