# $Id$
# Maintainer: Alexander Baldeck <alexander@archlinux.org>
# Contributor: Jan de Groot <jgc@archlinux.org>
pkgname=xorg-twm
pkgver=1.0.4
pkgrel=1
pkgdesc="X.Org Tiling Window Manager"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
backup=(etc/X11/twm/system.twmrc)
depends=('libxmu')
makedepends=('pkgconfig')
groups=('xorg')
source=(${url}/releases/individual/app/twm-${pkgver}.tar.bz2)
md5sums=('0865e14c73c08fa8c501ae877298ee9f')

build() {
  cd ${startdir}/src/twm-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
  install -m755 -d ${startdir}/pkg/etc/X11/twm
  install -m644 src/system.twmrc ${startdir}/pkg/etc/X11/twm/ || return 1
}
