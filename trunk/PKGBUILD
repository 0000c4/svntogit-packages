# $Id$
# Maintainer: AndyRTR <andyrtr@archlinux.org>
# Contributor: Francois Charette <francois.archlinux.org> 

pkgname=redland
pkgver=1.0.12
pkgrel=3
pkgdesc="Library that provides a high-level interface to RDF data"
url="http://librdf.org/"
license=("GPL")
arch=('i686' 'x86_64')
depends=('rasqal>=0.9.21' 'raptor>=1.4.21')
makedepends=('db>=5.1' 'postgresql-libs' 'libmysqlclient' 'unixodbc' 'sqlite3')
optdepends=('postgresql-libs:	PostgreSQL storage support for Redland'
            'libmysqlclient:	MySQL storage support for Redland'
            'unixodbc:		Virtuoso storage support for Redland'
            'sqlite3:		Sqlite storage support for Redland')
options=('!libtool')
source=(http://download.librdf.org/source/$pkgname-$pkgver.tar.gz)
md5sums=('40f37a5ad97fdfbf984f78dcea0c6115')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
	./configure --prefix=/usr \
	--enable-release \
	--disable-static \
	--with-raptor=system \
	--with-rasqal=system \
	--with-sqlite=3
        make
}

package() {
        cd ${srcdir}/${pkgname}-${pkgver}
        make -j1 DESTDIR=$pkgdir install
}
