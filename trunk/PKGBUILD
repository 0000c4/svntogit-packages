# $Id: $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=xorg-xmag
pkgver=1.0.3
pkgrel=1
pkgdesc="Magnify parts of the screen"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libxaw' 'libxmu' 'libxt' 'libx11')
makedepends=('xorg-util-macros')
source=(http://xorg.freedesktop.org/archive/individual/app/xmag-${pkgver}.tar.bz2
        git-fixes.patch)
sha1sums=('1acbc1ccdcd0399b62ad6e96a47021c00dcfde7d'
          '4f7cceae4bf4c297b6de38c6ea54e23d1a39764b')

build() {
  cd "${srcdir}/xmag-${pkgver}"
  patch -Np1 -i "${srcdir}/git-fixes.patch"
  autoreconf
  ./configure --prefix=/usr
  make
  make DESTDIR="${pkgdir}" install
  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/"
}
