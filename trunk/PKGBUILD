pkgname=loudmouth
pkgver=1.4.1
pkgrel=1
pkgdesc="A lightweight Jabber client library written in C/Glib"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://developer.imendio.com/wiki/Loudmouth"
depends=('glib2>=2.16.4' 'gnutls>=2.4.1' 'libidn')
options=('!libtool')
makedepends=('perlxml' 'pkgconfig')
source=("http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.4/${pkgname}-${pkgver}.tar.bz2")
md5sums=('e032a1369709e8a104791c17c6d5dfe5')

build() {
    cd ${startdir}/src/${pkgname}-${pkgver}
    ./configure --prefix=/usr \
    		--disable-debug \
                --disable-static
    make || return 1
    make DESTDIR=${startdir}/pkg install
}
