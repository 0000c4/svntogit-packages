# Contributor: Will Rea <sillywilly@gmail.com>

pkgname=network-manager-applet
pkgver=0.7.2
pkgrel=1
pkgdesc="GNOME frontends to NetWorkmanager"
arch=(i686 x86_64)
license=('GPL')
url="http://www.gnome.org/projects/NetworkManager/"
makedepends=('pkgconfig' 'intltool')
depends=('networkmanager>=0.7.2' 'libglade>=2.6.4' 'gnome-keyring>=2.28.0' 'policykit-gnome' 'notification-daemon' 'libnotify>=0.4.5' 'hicolor-icon-theme')
replaces=('gnome-network-manager')
conflicts=('gnome-network-manager')
provides=('gnome-network-manager')
install=network-manager-applet.install
source=(http://ftp.gnome.org/pub/GNOME/sources/network-manager-applet/0.7/network-manager-applet-${pkgver}.tar.bz2)
sha256sums=('38736c88efa3bf7bd1efd90a9145f95576cdb2799b7830d16a33ccfa1874e6d6')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var || return 1
  make || return 1
  make GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/usr/share/gconf/schemas"
  gconf-merge-schema "${pkgdir}/usr/share/gconf/schemas/${pkgname}.schemas" --domain nm-applet ${pkgdir}/etc/gconf/schemas/*.schemas || return 1
  rm -f ${pkgdir}/etc/gconf/schemas/*.schemas

}
