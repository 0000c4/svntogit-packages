# Maintainer: Tobias Kieslich <tobias@archlinux.org>

pkgname=xfce4-session
pkgver=4.4.3
pkgrel=1
pkgdesc="A session manager for Xfce"
arch=(i686 x86_64)
license=('GPL2')
url="http://www.xfce.org/"
groups=('xfce4')
depends=('libxfcegui4>=4.4.3' 'libxfce4mcs>=4.4.3' 'dbus-core>=1.2.3-1' 'hicolor-icon-theme')
makedepends=('xfce-mcs-manager>=4.4.3' 'pkgconfig' 'perlxml' 'xorg-server-utils')
replaces=('xfce4-toys')
options=('!libtool')
install=${pkgname}.install
source=(http://www.xfce.org/archive/xfce-${pkgver}/src/${pkgname}-${pkgver}.tar.bz2)
md5sums=('5c522e0d28c952af413cf0c43257b907')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib/xfce4 \
    --localstatedir=/var --disable-static \
    --enable-legacy-sm --disable-gnome --enable-session-screenshots \
    --with-shutdown-style=auto || return 1
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
}
