# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: William Rea <sillywilly@gmail.com>

pkgname=orca
pkgver=2.28.2
pkgrel=1
pkgdesc="A scriptable screen reader and magnifier"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.gnome.org/projects/orca"
install=orca.install
options=('!libtool')
depends=('gnome-python>=2.28.0' 'gnome-speech>=0.4.25' 'gnome-mag>=0.15.9' 'brltty' 'dbus-python>=0.83.0' 'libwnck>=2.28.0' 'hicolor-icon-theme')
makedepends=('pkgconfig' 'intltool')
replaces=('gnopernicus')
groups=('gnome-extra')
source=(http://ftp.gnome.org/pub/GNOME/sources/${pkgname}/2.28/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('ebd6add62dd2a553ea1e54fdb6022dfcdeb5e4b05bfe06197c6a127f10976f13')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
