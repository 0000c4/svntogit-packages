# $Id: PKGBUILD 2392 2008-06-01 19:38:25Z jgc $
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=mousetweaks
pkgver=3.0.2
pkgrel=1
pkgdesc="Mouse accessibility enhancements for the GNOME desktop"
arch=(i686 x86_64)
license=('GPL3' 'FDL')
depends=('libxtst' 'gtk3' 'gsettings-desktop-schemas')
makedepends=('gnome-doc-utils' 'intltool')
groups=('gnome-extra')
options=('!libtool' '!emptydirs')
url="http://www.gnome.org"
install=mousetweaks.install
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2)
sha256sums=('038d5a34bd2f66f46314d972401472b279e42b9782c751f873f73f45eba528dd')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeeper
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
