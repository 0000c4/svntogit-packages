pkgname=empathy

post_install() {
  usr/sbin/gconfpkg --install ${pkgname}
  gtk-icon-update -q -t -f usr/share/icons/hicolor
}

pre_upgrade() {
  pre_remove $1
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  usr/sbin/gconfpkg --uninstall ${pkgname}
}

post_remove() {
  gtk-icon-update -q -t -f usr/share/icons/hicolor
}
