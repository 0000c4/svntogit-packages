# $Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=kde-l10n-mk
pkgver=4.1.3
pkgrel=1
pkgdesc="Macedonian Localization for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('GPL')
groups=('kde-l10n')
replaces=('kde-i18n-mk')
provides=('kde-i18n-mk')
makedepends=('pkgconfig' 'cmake' 'automoc4' 'kdelibs')
options=('docs')
source=("http://download.kde.org/stable/${pkgver}/src/kde-l10n/${pkgname}-${pkgver}.tar.bz2")
md5sums=('52e65b08097519e5332ce402b84520be')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
