# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome2-user-docs
pkgver=2.24.2
pkgrel=1
pkgdesc="User documentation for GNOME2"
arch=(i686 x86_64)
license=('GFDL')
depends=('yelp')
url="http://www.gnome.org"
groups=('gnome')
options=(!makeflags)
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-user-docs/2.24/gnome-user-docs-${pkgver}.tar.bz2)
md5sums=('c387144f39c05152bb0771ae2b07a4d8')

build() {
  cd "${srcdir}/gnome-user-docs-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-scrollkeeper || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
