# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome2-user-docs
pkgver=2.91.90
pkgrel=1
pkgdesc="User documentation for GNOME2"
arch=(any)
license=('FDL')
depends=('yelp')
makedepends=('gnome-doc-utils')
url="http://www.gnome.org"
groups=('gnome')
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-user-docs/2.91/gnome-user-docs-${pkgver}.tar.bz2)
sha256sums=('4ccdb0b742a018c5d95fba9f579f95e358dec9bda5cbe6c22bafcb947ed75e1a')

build() {
  cd "${srcdir}/gnome-user-docs-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeeper
  make
}

package() {
  cd "${srcdir}/gnome-user-docs-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
