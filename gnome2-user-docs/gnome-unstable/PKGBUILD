# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome2-user-docs
pkgver=2.27.2
pkgrel=1
pkgdesc="User documentation for GNOME2"
arch=(any)
license=('FDL')
depends=('yelp>=2.27.5')
url="http://www.gnome.org"
groups=('gnome')
options=(!makeflags)
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-user-docs/2.27/gnome-user-docs-${pkgver}.tar.bz2)
sha256sums=('973e6800a7c797434786cf921f998aa2c13cb201b04d3080f30431608bf31a7a')

build() {
  cd "${srcdir}/gnome-user-docs-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeeper || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1
}
