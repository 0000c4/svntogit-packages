# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome2-user-docs
pkgver=2.32.0
pkgrel=1
pkgdesc="User documentation for GNOME2"
arch=(any)
license=('FDL')
depends=('yelp>=2.30.2')
url="http://www.gnome.org"
groups=('gnome')
options=(!makeflags)
source=(http://ftp.gnome.org/pub/gnome/sources/gnome-user-docs/2.32/gnome-user-docs-${pkgver}.tar.bz2)
sha256sums=('d42c4435590e5b79c8fcf1d917aee485096c02cdc84338bc31f769219ccc87f7')

build() {
  cd "${srcdir}/gnome-user-docs-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-scrollkeeper
  make
  make DESTDIR="${pkgdir}" install
}
