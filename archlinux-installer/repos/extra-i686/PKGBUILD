# $Id$
# Maintainer: Aaron Griffin <aaron@archlinux.org>

pkgname=archlinux-installer
pkgver=2009.01
pkgrel=1
pkgdesc="The ArchLinux install scripts and docs"
arch=('i686' 'x86_64')
url="http://projects.archlinux.org/?p=installer.git"
license=('GPL')
depends=('bash')
source=("ftp://ftp.archlinux.org/other/$pkgname/$pkgname-$pkgver.tar.gz")
md5sums=('03069e5ca3732bf180c7d6848527835b')

build() {
  cd $srcdir/$pkgname-$pkgver
  install -D -m755 setup $pkgdir/arch/setup
  install -D -m755 quickinst $pkgdir/arch/quickinst
  install -D -m644 arch-install-guide.txt $pkgdir/arch/arch-install-guide.txt
  install -D -m644 beginnersguide.txt $pkgdir/arch/beginnersguide.txt
}

# vim:set ts=2 sw=2 et:
