# $Id$
# Maintainer: damir <damir@archlinux.org>
# Contributor: damir <damir@archlinux.org>

pkgname=gqview-devel
pkgver=2.1.5
pkgrel=2
pkgdesc="An image browser and viewer [devel]"
arch=('i686' 'x86_64')
url="http://gqview.sourceforge.net/"
license=('GPL2')
depends=('gtk2' 'lcms')
provides=('gqview')
conflicts=('gqview')
source=(http://downloads.sourceforge.net/sourceforge/gqview/gqview-$pkgver.tar.gz konqgqview.desktop)
md5sums=('4644187d9b14b1dc11ac3bb146f262ea' 'aa501f02b019590289ed17505863c859')

build() {
  cd $startdir/src/gqview-$pkgver
  ./configure --prefix=/usr --mandir=/usr/share/man
  make || return 1
  make DESTDIR=$startdir/pkg install
  mkdir -p $startdir/pkg/opt/kde/share/apps/konqueror/servicemenus/
  cp $startdir/src/konqgqview.desktop $startdir/pkg/opt/kde/share/apps/konqueror/servicemenus/
}
