# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=feh
pkgver=1.3.5.040310
pkgrel=1
pkgdesc="A fast, lightweight image viewer which uses imlib2"
arch=('i686' 'x86_64')
url="https://derf.homelinux.org/~derf/projects/feh/"
license=('MIT')
depends=('libpng' 'libxinerama' 'giblib')
makedepends=('libxt')
source=("http://ftp.archlinux.org/other/${pkgname}/${pkgname}-${pkgver}.tar.bz2")
md5sums=('5ff7146f509c106146c02bbaf50a21fc')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr \
    --mandir=/usr/share/man  || return 1
  make || return 1
}

package(){
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} docsdir=/usr/share/doc/feh install || return 1
  install -D -m644 COPYING ${pkgdir}/usr/share/licenses/$pkgname/LICENSE
}
