pkgname=xfburn
pkgver=0.4.1
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="a simple CD/DVD burning tool based on libburnia libraries"
url="http://goodies.xfce.org/projects/applications/xfburn"
license=('GPL2')
groups=('xfce4-goodies')
install=${pkgname}.install
depends=('libburn>=0.6.0.pl01-1' 'libisofs>=0.6.12-2' 'thunar>=1.0.0' 'hicolor-icon-theme' 
         'librsvg' 'gstreamer0.10-base>=0.10.21' 'desktop-file-utils')
source=(http://goodies.xfce.org/releases/xfburn/$pkgname-$pkgver.tar.bz2)
md5sums=('f5ed76149fd348504d4a75830b4996dc')

build() { 
  cd ${srcdir}/$pkgname-$pkgver
  ./configure --prefix=/usr --enable-gstreamer --enable-thunar-vfs \
	--enable-dbus --enable-hal
  make || return 1
  make DESTDIR=${pkgdir} install || return 1
} 
